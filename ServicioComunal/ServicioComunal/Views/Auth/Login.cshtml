@{
    ViewData["Title"] = "Iniciar Sesión";
    ViewData["IsLogin"] = true;
    Layout = "_Layout";
}

<div class="login-container">
    <div class="login-card">
        <!-- Logo -->
        <div class="logo-container">
            <img src="~/images/logo-liceo.svg" alt="Logo Liceo Carrillos de Poás" class="logo" />
        </div>

        <!-- Título -->
        <h1 class="login-title">Servicio Comunal</h1>
        <p class="login-subtitle">
            Ingresa para consultar tu proceso de Servicio Comunal
        </p>

        <!-- Formulario de Login -->
        <form asp-action="Login" method="post" class="login-form">
            @if (ViewBag.Error != null)
            {
                <div class="alert-error">
                    @ViewBag.Error
                </div>
            }

            <!-- Campo de Usuario -->
            <div class="form-group">
                <label for="usuario" class="form-label">Usuario o Número de Cédula</label>
                <input type="text" 
                       class="form-control" 
                       id="usuario" 
                       name="usuario" 
                       placeholder="Ingresa tu usuario o cédula"
                       required />
            </div>

            <!-- Campo de Contraseña -->
            <div class="form-group">
                <label for="contraseña" class="form-label">Contraseña</label>
                <input type="password" 
                       class="form-control" 
                       id="contraseña" 
                       name="contraseña" 
                       placeholder="Ingresa tu contraseña"
                       required />
            </div>

            <!-- Opciones del formulario -->
            <div class="form-options">
                <div class="form-check">
                    <input type="checkbox" 
                           class="form-check-input" 
                           id="recordarme" 
                           name="recordarme" 
                           value="true" />
                    <label class="form-check-label" for="recordarme">
                        Recordarme
                    </label>
                </div>
                <a href="#" class="forgot-password">¿Olvidaste tu contraseña?</a>
            </div>

            <!-- Botón de login -->
            <button type="submit" class="btn-login">
                Iniciar Sesión
            </button>
        </form>

        <!-- Sección de ayuda -->
        <div class="help-section">
            <div class="help-title">
                <i class="fas fa-question-circle"></i>
                ¿Necesitas ayuda?
            </div>
            <p class="help-text">
                Contacta a la coordinación de Servicio Comunal al 
                servicocomunal@liceocarrillos.ed.cr o al teléfono 2494-1234
            </p>
        </div>

        <!-- Footer -->
        <div class="login-footer">
            <p class="footer-title">¿Problemas para acceder a tu cuenta? Contactar Coordinación</p>
            <div class="footer-links">
                <a href="https://www.licapo.ed.cr/" target="_blank" class="footer-link">Liceo Carrillos de Poás</a>
            </div>
        </div>
    </div>
</div>
