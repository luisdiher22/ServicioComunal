@model ServicioComunal.Models.CartaConsentimientoFormularioDto
@{
    ViewData["Title"] = "Formulario Carta de Consentimiento Encargado Legal";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var entrega = ViewBag.Entrega as ServicioComunal.Models.Entrega;
    var estudiantes = ViewBag.Estudiantes as List<ServicioComunal.Models.Estudiante>;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-file-contract"></i>
                        Carta de Consentimiento Encargado Legal: @entrega?.Nombre
                    </h4>
                    <p class="mb-0">Completar la información solicitada para generar el PDF</p>
                </div>
                
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle"></i>
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i>
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form id="formularioCartaConsentimiento" action="@Url.Action("GuardarCartaConsentimiento", "Estudiante")" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="entregaId" value="@entrega?.Identificacion" />
                        
                        <!-- Información Básica -->
                        <div class="card mb-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-0"><i class="fas fa-info-circle"></i> Información del Tutor</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="nombreTutor" class="form-label">Nombre del Tutor *</label>
                                            <input type="text" class="form-control" id="nombreTutor" name="nombreTutor" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="cedulaTutor" class="form-label">Cédula del Tutor *</label>
                                            <input type="text" class="form-control" id="cedulaTutor" name="cedulaTutor" required>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="nombreDocente" class="form-label">Nombre del Docente *</label>
                                    <input type="text" class="form-control" id="nombreDocente" name="nombreDocente" required>
                                </div>
                            </div>
                        </div>

                        <!-- Información del Estudiante -->
                        <div class="card mb-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-0"><i class="fas fa-user-graduate"></i> Información del Estudiante</h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label for="cedulaEstudiante" class="form-label">Cédula del Estudiante *</label>
                                    <input type="text" class="form-control" id="cedulaEstudiante" name="cedulaEstudiante" required>
                                </div>
                            </div>
                        </div>

                        <!-- Información del Servicio -->
                        <div class="card mb-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-0"><i class="fas fa-project-diagram"></i> Información del Servicio</h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label for="tituloServicioComunal" class="form-label">Título del Servicio Comunal *</label>
                                    <input type="text" class="form-control" id="tituloServicioComunal" name="tituloServicioComunal" required>
                                </div>

                                <div class="mb-3">
                                    <label for="ubicacionServicio" class="form-label">Ubicación del Servicio *</label>
                                    <input type="text" class="form-control" id="ubicacionServicio" name="ubicacionServicio" required>
                                </div>
                            </div>
                        </div>

                        <!-- Cédula del Encargado Legal -->
                        <div class="card mb-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-0"><i class="fas fa-id-card"></i> Cédula del Encargado Legal</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="imagenCedulaFrente" class="form-label">Imagen Cédula (Frente) *</label>
                                            <input type="file" class="form-control" id="imagenCedulaFrente" name="imagenCedulaFrente" accept=".jpg,.jpeg,.png,.pdf" required>
                                            <div class="form-text">Formatos permitidos: JPG, PNG, PDF. Tamaño máximo: 5MB</div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="imagenCedulaAtras" class="form-label">Imagen Cédula (Atrás) *</label>
                                            <input type="file" class="form-control" id="imagenCedulaAtras" name="imagenCedulaAtras" accept=".jpg,.jpeg,.png,.pdf" required>
                                            <div class="form-text">Formatos permitidos: JPG, PNG, PDF. Tamaño máximo: 5MB</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Botones de Acción -->
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <button type="button" class="btn btn-secondary" onclick="guardarBorrador()">
                                        <i class="fas fa-save"></i> Guardar Borrador
                                    </button>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-file-pdf"></i> Generar PDF
                                    </button>
                                </div>
                                <div class="form-text mt-2">
                                    <i class="fas fa-info-circle"></i>
                                    Al generar el PDF, se creará automáticamente el documento con los datos ingresados y las imágenes de la cédula.
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function guardarBorrador() {
            alert('Funcionalidad de borrador pendiente de implementar');
        }

        // Validación de archivos
        function validarArchivo(input) {
            const archivo = input.files[0];
            if (archivo) {
                const tamañoMB = archivo.size / (1024 * 1024);
                if (tamañoMB > 5) {
                    alert('El archivo es demasiado grande. El tamaño máximo es 5MB.');
                    input.value = '';
                    return false;
                }
                
                const tiposPermitidos = ['image/jpeg', 'image/jpg', 'image/png', 'application/pdf'];
                if (!tiposPermitidos.includes(archivo.type)) {
                    alert('Tipo de archivo no permitido. Use JPG, PNG o PDF.');
                    input.value = '';
                    return false;
                }
            }
            return true;
        }

        // Autocompletar datos
        document.addEventListener('DOMContentLoaded', function() {
            @if (estudiantes != null && estudiantes.Any())
            {
                <text>
                const estudiantes = @Html.Raw(Json.Serialize(estudiantes.Select(e => new { 
                    nombre = e.Nombre + " " + e.Apellidos, 
                    identificacion = e.Identificacion,
                    seccion = e.Clase 
                }).ToList()));
                
                if (estudiantes.length > 0) {
                    document.getElementById('cedulaEstudiante').value = estudiantes[0].identificacion || '';
                }
                </text>
            }

            // Eventos de validación de archivos
            document.getElementById('imagenCedulaFrente').addEventListener('change', function() {
                validarArchivo(this);
            });

            document.getElementById('imagenCedulaAtras').addEventListener('change', function() {
                validarArchivo(this);
            });
        });

        // Manejo del envío del formulario
        document.getElementById('formularioCartaConsentimiento').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const form = this;
            const formData = new FormData(form);
            
            // Mostrar estado de carga
            const submitButton = form.querySelector('button[type="submit"]');
            const originalText = submitButton.innerHTML;
            submitButton.disabled = true;
            submitButton.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Generando PDF...';
            
            console.log('=== DATOS DEL FORMULARIO ===');
            for (let [key, value] of formData.entries()) {
                if (value instanceof File) {
                    console.log(`${key}: [Archivo: ${value.name}, Tamaño: ${value.size} bytes]`);
                } else {
                    console.log(`${key}: ${value}`);
                }
            }
            console.log('=== FIN DATOS DEL FORMULARIO ===');
            
            const actionUrl = '@Url.Action("GuardarCartaConsentimiento", "Estudiante")';
            console.log('URL de destino:', actionUrl);
            
            // Enviar usando fetch API
            fetch(actionUrl, {
                method: 'POST',
                body: formData,
                redirect: 'follow'
            })
            .then(response => {
                console.log('Respuesta recibida:', response.status, 'URL:', response.url);
                if (response.ok) {
                    if (response.redirected) {
                        console.log('Redirigiendo a:', response.url);
                        window.location.href = response.url;
                    } else {
                        return response.text();
                    }
                } else {
                    throw new Error(`Error HTTP: ${response.status}`);
                }
            })
            .then(data => {
                if (data) {
                    console.log('Respuesta del servidor:', data);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error al generar el PDF: ' + error.message);
            })
            .finally(() => {
                // Restaurar botón
                submitButton.disabled = false;
                submitButton.innerHTML = originalText;
            });
        });
    </script>
}
