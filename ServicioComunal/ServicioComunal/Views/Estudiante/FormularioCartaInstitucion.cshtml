@model ServicioComunal.Models.CartaInstitucionFormularioDto
@{
    ViewData["Title"] = "Formulario Carta para Ingresar a la Institución";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var entrega = ViewBag.Entrega as ServicioComunal.Models.Entrega;
    var estudiantes = ViewBag.Estudiantes as List<ServicioComunal.Models.Estudiante>;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-envelope"></i>
                        Carta para Ingresar a la Institución: @entrega?.Nombre
                    </h4>
                    <p class="mb-0">Completar la información solicitada para generar el PDF</p>
                </div>
                
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle"></i>
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i>
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form id="formularioCartaInstitucion" action="@Url.Action("GuardarCartaInstitucion", "Estudiante")" method="post">
                        <input type="hidden" name="entregaId" value="@entrega?.Identificacion" />
                        
                        <!-- Fecha -->
                        <div class="card mb-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-0"><i class="fas fa-calendar"></i> Fecha</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label for="diaFecha" class="form-label">Día *</label>
                                            <input type="text" class="form-control" id="diaFecha" name="diaFecha" required>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label for="mesFecha" class="form-label">Mes *</label>
                                            <input type="text" class="form-control" id="mesFecha" name="mesFecha" required>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label for="yearFecha" class="form-label">Año *</label>
                                            <input type="text" class="form-control" id="yearFecha" name="yearFecha" required>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Información del Profesor y Proyecto -->
                        <div class="card mb-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-0"><i class="fas fa-project-diagram"></i> Información del Proyecto</h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label for="nombreProfesor" class="form-label">Nombre del Profesor *</label>
                                    <input type="text" class="form-control" id="nombreProfesor" name="nombreProfesor" required>
                                </div>

                                <div class="mb-3">
                                    <label for="tituloProyecto" class="form-label">Título del Proyecto *</label>
                                    <input type="text" class="form-control" id="tituloProyecto" name="tituloProyecto" required>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="dias" class="form-label">Días *</label>
                                            <input type="text" class="form-control" id="dias" name="dias" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="fechas" class="form-label">Fechas *</label>
                                            <input type="text" class="form-control" id="fechas" name="fechas" required>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="areaDesignada" class="form-label">Área Designada *</label>
                                    <input type="text" class="form-control" id="areaDesignada" name="areaDesignada" required>
                                </div>
                            </div>
                        </div>

                        <!-- Estudiantes -->
                        <div class="card mb-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-0"><i class="fas fa-users"></i> Estudiantes Participantes</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="nombreEstudiante1" class="form-label">Estudiante 1 *</label>
                                            <input type="text" class="form-control" id="nombreEstudiante1" name="nombreEstudiante1" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="seccion1" class="form-label">Sección 1 *</label>
                                            <input type="text" class="form-control" id="seccion1" name="seccion1" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="nombreEstudiante2" class="form-label">Estudiante 2</label>
                                            <input type="text" class="form-control" id="nombreEstudiante2" name="nombreEstudiante2">
                                        </div>
                                        <div class="mb-3">
                                            <label for="seccion2" class="form-label">Sección 2</label>
                                            <input type="text" class="form-control" id="seccion2" name="seccion2">
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="nombreEstudiante3" class="form-label">Estudiante 3</label>
                                            <input type="text" class="form-control" id="nombreEstudiante3" name="nombreEstudiante3">
                                        </div>
                                        <div class="mb-3">
                                            <label for="seccion3" class="form-label">Sección 3</label>
                                            <input type="text" class="form-control" id="seccion3" name="seccion3">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="nombreEstudiante4" class="form-label">Estudiante 4</label>
                                            <input type="text" class="form-control" id="nombreEstudiante4" name="nombreEstudiante4">
                                        </div>
                                        <div class="mb-3">
                                            <label for="seccion4" class="form-label">Sección 4</label>
                                            <input type="text" class="form-control" id="seccion4" name="seccion4">
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="nombreEstudiante5" class="form-label">Estudiante 5</label>
                                            <input type="text" class="form-control" id="nombreEstudiante5" name="nombreEstudiante5">
                                        </div>
                                        <div class="mb-3">
                                            <label for="seccion5" class="form-label">Sección 5</label>
                                            <input type="text" class="form-control" id="seccion5" name="seccion5">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Firma -->
                        <div class="card mb-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-0"><i class="fas fa-signature"></i> Firma del Tutor</h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label for="firmaTutor" class="form-label">Firma del Tutor *</label>
                                    <div class="signature-container border rounded p-3">
                                        <canvas id="canvasFirmaTutor" width="400" height="150" class="signature-canvas border"></canvas>
                                        <div class="signature-controls mt-2">
                                            <button type="button" class="btn btn-sm btn-outline-secondary" onclick="limpiarFirma('canvasFirmaTutor')">
                                                <i class="fas fa-eraser"></i> Limpiar Firma
                                            </button>
                                            <small class="text-muted ms-3">Dibuje su firma en el área de arriba</small>
                                        </div>
                                    </div>
                                    <input type="hidden" id="firmaTutor" name="firmaTutor" required>
                                    <div class="form-text">Dibuje su firma en el canvas. Se convertirá automáticamente en imagen para el PDF.</div>
                                </div>
                            </div>
                        </div>

                        <!-- Botones de Acción -->
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <button type="button" class="btn btn-secondary" onclick="guardarBorrador()">
                                        <i class="fas fa-save"></i> Guardar Borrador
                                    </button>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-file-pdf"></i> Generar PDF
                                    </button>
                                </div>
                                <div class="form-text mt-2">
                                    <i class="fas fa-info-circle"></i>
                                    Al generar el PDF, se creará automáticamente el documento con los datos ingresados.
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .signature-container {
            background-color: #f8f9fa;
        }
        .signature-canvas {
            background-color: white;
            cursor: crosshair;
            display: block;
            margin: 0 auto;
        }
        .signature-controls {
            text-align: center;
        }
    </style>

    <script>
        // Variables globales para el canvas de firma
        let isDrawing = false;
        let canvasFirma = null;
        let ctxFirma = null;

        function initializeSignatureCanvas(canvasId) {
            canvasFirma = document.getElementById(canvasId);
            ctxFirma = canvasFirma.getContext('2d');
            
            // Configurar el contexto
            ctxFirma.strokeStyle = '#000000';
            ctxFirma.lineWidth = 2;
            ctxFirma.lineCap = 'round';
            ctxFirma.lineJoin = 'round';

            // Eventos del mouse
            canvasFirma.addEventListener('mousedown', startDrawing);
            canvasFirma.addEventListener('mousemove', draw);
            canvasFirma.addEventListener('mouseup', stopDrawing);
            canvasFirma.addEventListener('mouseout', stopDrawing);

            // Eventos táctiles para móviles
            canvasFirma.addEventListener('touchstart', handleTouch);
            canvasFirma.addEventListener('touchmove', handleTouch);
            canvasFirma.addEventListener('touchend', stopDrawing);
        }

        function startDrawing(e) {
            isDrawing = true;
            const rect = canvasFirma.getBoundingClientRect();
            const x = e.clientX - rect.left;
            const y = e.clientY - rect.top;
            
            ctxFirma.beginPath();
            ctxFirma.moveTo(x, y);
        }

        function draw(e) {
            if (!isDrawing) return;
            
            const rect = canvasFirma.getBoundingClientRect();
            const x = e.clientX - rect.left;
            const y = e.clientY - rect.top;
            
            ctxFirma.lineTo(x, y);
            ctxFirma.stroke();
        }

        function stopDrawing() {
            if (isDrawing) {
                isDrawing = false;
                // Guardar la firma como base64
                const firmaBase64 = canvasFirma.toDataURL('image/png');
                document.getElementById('firmaTutor').value = firmaBase64;
            }
        }

        function handleTouch(e) {
            e.preventDefault();
            const touch = e.touches[0];
            const mouseEvent = new MouseEvent(e.type === 'touchstart' ? 'mousedown' : 
                                            e.type === 'touchmove' ? 'mousemove' : 'mouseup', {
                clientX: touch.clientX,
                clientY: touch.clientY
            });
            canvasFirma.dispatchEvent(mouseEvent);
        }

        function limpiarFirma(canvasId) {
            const canvas = document.getElementById(canvasId);
            const ctx = canvas.getContext('2d');
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            
            // Limpiar el campo oculto
            document.getElementById('firmaTutor').value = '';
        }

        function validarFirma() {
            const firmaValue = document.getElementById('firmaTutor').value;
            if (!firmaValue || firmaValue.trim() === '') {
                alert('Por favor, dibuje su firma antes de enviar el formulario.');
                return false;
            }
            return true;
        }

        function guardarBorrador() {
            alert('Funcionalidad de borrador pendiente de implementar');
        }

        // Autocompletar fecha actual y datos
        document.addEventListener('DOMContentLoaded', function() {
            // Inicializar canvas de firma
            initializeSignatureCanvas('canvasFirmaTutor');

            // Establecer fecha actual
            const fechaHoy = new Date();
            document.getElementById('diaFecha').value = fechaHoy.getDate().toString().padStart(2, '0');
            document.getElementById('mesFecha').value = (fechaHoy.getMonth() + 1).toString().padStart(2, '0');
            document.getElementById('yearFecha').value = fechaHoy.getFullYear().toString();
        });

        // Manejo del envío del formulario
        document.getElementById('formularioCartaInstitucion').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Validar que se haya dibujado la firma
            if (!validarFirma()) {
                return;
            }
            
            const form = this;
            const formData = new FormData(form);
            
            // Mostrar estado de carga
            const submitButton = form.querySelector('button[type="submit"]');
            const originalText = submitButton.innerHTML;
            submitButton.disabled = true;
            submitButton.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Generando PDF...';
            
            console.log('=== DATOS DEL FORMULARIO ===');
            for (let [key, value] of formData.entries()) {
                if (key === 'firmaTutor') {
                    console.log(key + ': [Firma como imagen base64, longitud: ' + value.length + ' caracteres]');
                } else {
                    console.log(key + ': ' + value);
                }
            }
            console.log('=== FIN DATOS DEL FORMULARIO ===');
            
            const actionUrl = '@Url.Action("GuardarCartaInstitucion", "Estudiante")';
            console.log('URL de destino:', actionUrl);
            
            // Enviar usando fetch API
            fetch(actionUrl, {
                method: 'POST',
                body: formData,
                redirect: 'follow'
            })
            .then(response => {
                console.log('Respuesta recibida:', response.status, 'URL:', response.url);
                if (response.ok) {
                    if (response.redirected) {
                        console.log('Redirigiendo a:', response.url);
                        window.location.href = response.url;
                    } else {
                        return response.text();
                    }
                } else {
                    throw new Error('Error HTTP: ' + response.status);
                }
            })
            .then(data => {
                if (data) {
                    console.log('Respuesta del servidor:', data);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error al generar el PDF: ' + error.message);
            })
            .finally(() => {
                // Restaurar botón
                submitButton.disabled = false;
                submitButton.innerHTML = originalText;
            });
        });
    </script>
}
