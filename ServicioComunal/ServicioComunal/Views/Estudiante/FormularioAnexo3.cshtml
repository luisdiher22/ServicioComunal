@model ServicioComunal.Models.Anexo3FormularioDto
@{
    ViewData["Title"] = "Formulario Anexo #3";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var entrega = ViewBag.Entrega as ServicioComunal.Models.Entrega;
    var estudiantes = ViewBag.Estudiantes as List<ServicioComunal.Models.Estudiante>;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-file-alt"></i>
                        Anexo #3: @entrega?.Nombre
                    </h4>
                    <p class="mb-0">Plan de Trabajo - Completar la información solicitada</p>
                </div>
                
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle"></i>
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-controller="Estudiante" asp-action="GuardarAnexo3" method="post" id="anexo3Form">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="entregaId" value="@entrega?.Identificacion" />
                        
                        <!-- Información del Proyecto -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h5 class="text-primary border-bottom pb-2">
                                    <i class="fas fa-project-diagram"></i>
                                    Información del Proyecto
                                </h5>
                            </div>
                            <div class="col-12">
                                <div class="form-group mb-3">
                                    <label asp-for="NombreDelProyecto" class="form-label fw-bold">
                                        Nombre del Proyecto <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="NombreDelProyecto" id="NombreDelProyecto" name="NombreDelProyecto" class="form-control" required 
                                           placeholder="Ingrese el nombre del proyecto">
                                </div>
                            </div>
                        </div>

                        <!-- Información del Tutor -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h5 class="text-primary border-bottom pb-2">
                                    <i class="fas fa-user-tie"></i>
                                    Información del Tutor
                                </h5>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Tutor" class="form-label fw-bold">
                                        Nombre del Tutor <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Tutor" id="Tutor" name="Tutor" class="form-control" required 
                                           placeholder="Nombre completo del tutor">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Telefono" class="form-label fw-bold">
                                        Teléfono del Tutor
                                    </label>
                                    <input asp-for="Telefono" name="Telefono" class="form-control" 
                                           placeholder="Número de teléfono">
                                </div>
                            </div>
                        </div>

                        <!-- Estudiantes -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h5 class="text-primary border-bottom pb-2">
                                    <i class="fas fa-users"></i>
                                    Estudiantes Participantes
                                </h5>
                            </div>
                            @* Estudiante 1 *@
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label class="form-label fw-bold">
                                        Estudiante 1 <span class="text-danger">*</span>
                                    </label>
                                    <input id="NombreEstudiante1" name="NombreEstudiante1" class="form-control" required 
                                           placeholder="Nombre completo">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label class="form-label fw-bold">
                                        Sección 1 <span class="text-danger">*</span>
                                    </label>
                                    <input id="Seccion01" name="Seccion01" class="form-control" required 
                                           placeholder="Sección">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label class="form-label fw-bold">
                                        Teléfono 1
                                    </label>
                                    <input id="Telefono01" name="Telefono01" class="form-control" 
                                           placeholder="Número de teléfono">
                                </div>
                            </div>
                            
                            @* Estudiante 2 *@
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label class="form-label fw-bold">
                                        Estudiante 2
                                    </label>
                                    <input id="NombreEstudiante2" name="NombreEstudiante2" class="form-control" 
                                           placeholder="Nombre completo">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label class="form-label fw-bold">
                                        Sección 2
                                    </label>
                                    <input id="Seccion02" name="Seccion02" class="form-control" 
                                           placeholder="Sección">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label class="form-label fw-bold">
                                        Teléfono 2
                                    </label>
                                    <input id="Telefono02" name="Telefono02" class="form-control" 
                                           placeholder="Número de teléfono">
                                </div>
                            </div>
                            
                            @* Estudiante 3 *@
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label class="form-label fw-bold">
                                        Estudiante 3
                                    </label>
                                    <input id="NombreEstudiante3" name="NombreEstudiante3" class="form-control" 
                                           placeholder="Nombre completo">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label class="form-label fw-bold">
                                        Sección 3
                                    </label>
                                    <input id="Seccion03" name="Seccion03" class="form-control" 
                                           placeholder="Sección">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label class="form-label fw-bold">
                                        Teléfono 3
                                    </label>
                                    <input id="Telefono03" name="Telefono03" class="form-control" 
                                           placeholder="Número de teléfono">
                                </div>
                            </div>
                            
                            @* Estudiante 4 *@
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label class="form-label fw-bold">
                                        Estudiante 4
                                    </label>
                                    <input id="NombreEstudiante4" name="NombreEstudiante4" class="form-control" 
                                           placeholder="Nombre completo">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label class="form-label fw-bold">
                                        Sección 4
                                    </label>
                                    <input id="Seccion04" name="Seccion04" class="form-control" 
                                           placeholder="Sección">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label class="form-label fw-bold">
                                        Teléfono 4
                                    </label>
                                    <input id="Telefono04" name="Telefono04" class="form-control" 
                                           placeholder="Número de teléfono">
                                </div>
                            </div>
                        </div>

                        <!-- Ubicación del Proyecto -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h5 class="text-primary border-bottom pb-2">
                                    <i class="fas fa-map-marker-alt"></i>
                                    Ubicación del Proyecto
                                </h5>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="Provincia" class="form-label fw-bold">
                                        Provincia <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Provincia" id="Provincia" name="Provincia" class="form-control" required>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="Canton" class="form-label fw-bold">
                                        Cantón <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Canton" id="Canton" name="Canton" class="form-control" required>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="Distrito" class="form-label fw-bold">
                                        Distrito <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Distrito" id="Distrito" name="Distrito" class="form-control" required>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group mb-3">
                                    <label asp-for="DireccionExacta" class="form-label fw-bold">
                                        Dirección Exacta <span class="text-danger">*</span>
                                    </label>
                                    <textarea asp-for="DireccionExacta" id="DireccionExacta" name="DireccionExacta" class="form-control" rows="2" required
                                              placeholder="Descripción detallada de la ubicación"></textarea>
                                </div>
                            </div>
                        </div>

                        <!-- Objetivos -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h5 class="text-primary border-bottom pb-2">
                                    <i class="fas fa-bullseye"></i>
                                    Objetivos del Proyecto
                                </h5>
                            </div>
                            <div class="col-12">
                                <div class="form-group mb-3">
                                    <label asp-for="ObjetivoGeneral1" class="form-label fw-bold">
                                        Objetivo General <span class="text-danger">*</span>
                                    </label>
                                    <textarea asp-for="ObjetivoGeneral1" id="ObjetivoGeneral1" name="ObjetivoGeneral1" class="form-control" rows="3" required
                                              placeholder="Describa el objetivo general del proyecto"></textarea>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group mb-3">
                                    <label asp-for="ObjetivosEspecificos" class="form-label fw-bold">
                                        Objetivos Específicos <span class="text-danger">*</span>
                                    </label>
                                    <textarea asp-for="ObjetivosEspecificos" id="ObjetivosEspecificos" name="ObjetivosEspecificos" class="form-control" rows="4" required
                                              placeholder="Liste los objetivos específicos del proyecto"></textarea>
                                </div>
                            </div>
                        </div>

                        <!-- Botones de Acción -->
                        <div class="row">
                            <div class="col-12">
                                <div class="d-flex justify-content-between align-items-center border-top pt-3">
                                    <a href="@Url.Action("DetalleEntrega", "Estudiante", new { id = entrega?.Identificacion })" 
                                       class="btn btn-outline-secondary">
                                        <i class="fas fa-arrow-left"></i>
                                        Volver
                                    </a>
                                    
                                    <div>
                                        <button type="button" class="btn btn-outline-primary me-2" onclick="guardarBorrador()">
                                            <i class="fas fa-save"></i>
                                            Guardar Borrador
                                        </button>
                                        
                                        <button type="submit" class="btn btn-success">
                                            <i class="fas fa-file-pdf"></i>
                                            Generar PDF Final
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function guardarBorrador() {
    alert('Funcionalidad de guardar borrador pendiente de implementar');
}

// Prevent default form submission and use fetch API instead
document.addEventListener('DOMContentLoaded', function() {
    console.log('DOM cargado para FormularioAnexo3');
    
    const form = document.getElementById('anexo3Form');
    if (!form) {
        console.error('Formulario anexo3Form no encontrado');
        return;
    }
    
    console.log('Formulario encontrado:', form);
    form.addEventListener('submit', function(e) {
        e.preventDefault(); // Prevent default form submission
        console.log('Submit event capturado para FormularioAnexo3');
        
        // Validate required fields using getElementById for consistency
        const nombreDelProyecto = document.getElementById('NombreDelProyecto');
        const tutor = document.getElementById('Tutor');
        const nombreEstudiante1 = document.getElementById('NombreEstudiante1');
        const seccion01 = document.getElementById('Seccion01');
        const provincia = document.getElementById('Provincia');
        const canton = document.getElementById('Canton');
        const distrito = document.getElementById('Distrito');
        const direccionExacta = document.getElementById('DireccionExacta');
        const objetivoGeneral1 = document.getElementById('ObjetivoGeneral1');
        const objetivosEspecificos = document.getElementById('ObjetivosEspecificos');
        
        console.log('Validando campos requeridos...');
        console.log('NombreDelProyecto:', nombreDelProyecto?.value);
        console.log('Tutor:', tutor?.value);
        console.log('NombreEstudiante1:', nombreEstudiante1?.value);
        console.log('Seccion01:', seccion01?.value);
        console.log('Provincia:', provincia?.value);
        console.log('Canton:', canton?.value);
        console.log('Distrito:', distrito?.value);
        console.log('DireccionExacta:', direccionExacta?.value);
        console.log('ObjetivoGeneral1:', objetivoGeneral1?.value);
        console.log('ObjetivosEspecificos:', objetivosEspecificos?.value);
        
        if (!nombreDelProyecto || !nombreDelProyecto.value.trim()) {
            alert('Por favor, ingrese el nombre del proyecto.');
            if (nombreDelProyecto) nombreDelProyecto.focus();
            return;
        }
        
        if (!tutor || !tutor.value.trim()) {
            alert('Por favor, ingrese el nombre del tutor.');
            if (tutor) tutor.focus();
            return;
        }
        
        if (!nombreEstudiante1 || !nombreEstudiante1.value.trim()) {
            alert('Por favor, ingrese el nombre del estudiante 1.');
            if (nombreEstudiante1) nombreEstudiante1.focus();
            return;
        }
        
        if (!seccion01 || !seccion01.value.trim()) {
            alert('Por favor, ingrese la sección del estudiante 1.');
            if (seccion01) seccion01.focus();
            return;
        }
        
        if (!provincia || !provincia.value.trim()) {
            alert('Por favor, ingrese la provincia.');
            if (provincia) provincia.focus();
            return;
        }
        
        if (!canton || !canton.value.trim()) {
            alert('Por favor, ingrese el cantón.');
            if (canton) canton.focus();
            return;
        }
        
        if (!distrito || !distrito.value.trim()) {
            alert('Por favor, ingrese el distrito.');
            if (distrito) distrito.focus();
            return;
        }
        
        if (!direccionExacta || !direccionExacta.value.trim()) {
            alert('Por favor, ingrese la dirección exacta.');
            if (direccionExacta) direccionExacta.focus();
            return;
        }
        
        if (!objetivoGeneral1 || !objetivoGeneral1.value.trim()) {
            alert('Por favor, ingrese el objetivo general.');
            if (objetivoGeneral1) objetivoGeneral1.focus();
            return;
        }
        
        if (!objetivosEspecificos || !objetivosEspecificos.value.trim()) {
            alert('Por favor, ingrese los objetivos específicos.');
            if (objetivosEspecificos) objetivosEspecificos.focus();
            return;
        }
        
        console.log('Validaciones pasadas, creando FormData...');
        
        // Create FormData from the form
        const formData = new FormData(form);
        
        // Show loading state
        const submitButton = form.querySelector('button[type="submit"]');
        const originalText = submitButton.innerHTML;
        submitButton.disabled = true;
        submitButton.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Generando PDF...';
        
        console.log('Estado de carga activado, preparando envío...');
        
        console.log('=== DATOS DEL FORMULARIO ===');
        for (let [key, value] of formData.entries()) {
            console.log(key + ':', value);
        }
        console.log('=== FIN DATOS DEL FORMULARIO ===');
        
        const actionUrl = '@Url.Action("GuardarAnexo3", "Estudiante")';
        console.log('URL de destino:', actionUrl);
        
        console.log('Iniciando fetch request...');
        
        // Submit using fetch API
        fetch(actionUrl, {
            method: 'POST',
            body: formData,
            redirect: 'follow' // Seguir redirecciones automáticamente
        })
        .then(response => {
            console.log('Respuesta recibida:', response.status, 'URL:', response.url);
            if (response.ok) {
                // Si la respuesta es exitosa, redirigir a la URL final
                console.log('POST exitoso, redirigiendo a:', response.url);
                window.location.href = response.url;
            } else {
                throw new Error('Error en la respuesta: ' + response.status);
            }
        })
        .catch(error => {
            console.error('Error al enviar formulario:', error);
            alert('Error al procesar el formulario: ' + error.message);
            // Restore button state
            submitButton.disabled = false;
            submitButton.innerHTML = originalText;
        });
    });
});
</script>
