@{
    ViewData["Title"] = "Mis Solicitudes";
    var solicitudesEnviadas = ViewBag.SolicitudesEnviadas as List<ServicioComunal.Models.Solicitud>;
    var solicitudesRecibidas = ViewBag.SolicitudesRecibidas as List<ServicioComunal.Models.Solicitud>;
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 sidebar bg-light p-3">
            <div class="text-center mb-4">
                <img src="~/images/logo-liceo.svg" alt="Logo" style="width: 60px; height: 60px;">
                <h5 class="mt-2">Panel de Estudiante</h5>
            </div>

            <nav class="nav flex-column">
                <a class="nav-link" href="@Url.Action("Dashboard", "Estudiante")">
                    <i class="fas fa-tachometer-alt"></i> Dashboard
                </a>
                <a class="nav-link" href="@Url.Action("GestionGrupos", "Estudiante")">
                    <i class="fas fa-users"></i> Gestión de Grupos
                </a>
                <a class="nav-link active" href="@Url.Action("MisSolicitudes", "Estudiante")">
                    <i class="fas fa-bell"></i> Solicitudes
                </a>
                <a class="nav-link" href="@Url.Action("MiPerfil", "Estudiante")">
                    <i class="fas fa-user"></i> Mi Perfil
                </a>
                <hr>
                <a class="nav-link text-danger" href="@Url.Action("Logout", "Auth")">
                    <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
                </a>
            </nav>
        </div>

        <!-- Contenido principal -->
        <div class="col-md-9 main-content p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Mis Solicitudes</h2>
                <a href="@Url.Action("GestionGrupos", "Estudiante")" class="btn btn-primary">
                    <i class="fas fa-arrow-left"></i> Volver a Gestión de Grupos
                </a>
            </div>

            <!-- Solicitudes Enviadas -->
            <div class="row mb-4">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-paper-plane"></i> Solicitudes Enviadas
                            </h5>
                        </div>
                        <div class="card-body">
                            @if (solicitudesEnviadas != null && solicitudesEnviadas.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Tipo</th>
                                                <th>Destinatario</th>
                                                <th>Grupo</th>
                                                <th>Fecha Enviada</th>
                                                <th>Estado</th>
                                                <th>Fecha Respuesta</th>
                                                <th>Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var solicitud in solicitudesEnviadas)
                                            {
                                                <tr>
                                                    <td>
                                                        @if (solicitud.Tipo == "INVITACION_GRUPO")
                                                        {
                                                            <span class="badge badge-primary">
                                                                <i class="fas fa-user-plus"></i> Invitación
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge badge-info">
                                                                <i class="fas fa-handshake"></i> Solicitud Ingreso
                                                            </span>
                                                        }
                                                    </td>
                                                    <td>@solicitud.EstudianteDestinatario?.Nombre @solicitud.EstudianteDestinatario?.Apellidos</td>
                                                    <td>
                                                        @if (solicitud.GrupoNumero.HasValue)
                                                        {
                                                            <span class="badge badge-secondary">Grupo @solicitud.GrupoNumero</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">-</span>
                                                        }
                                                    </td>
                                                    <td>@solicitud.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</td>
                                                    <td>
                                                        @switch (solicitud.Estado)
                                                        {
                                                            case "PENDIENTE":
                                                                <span class="badge badge-warning">
                                                                    <i class="fas fa-clock"></i> Pendiente
                                                                </span>
                                                                break;
                                                            case "ACEPTADA":
                                                                <span class="badge badge-success">
                                                                    <i class="fas fa-check"></i> Aceptada
                                                                </span>
                                                                break;
                                                            case "RECHAZADA":
                                                                <span class="badge badge-danger">
                                                                    <i class="fas fa-times"></i> Rechazada
                                                                </span>
                                                                break;
                                                        }
                                                    </td>
                                                    <td>
                                                        @if (solicitud.FechaRespuesta.HasValue)
                                                        {
                                                            @solicitud.FechaRespuesta.Value.ToString("dd/MM/yyyy HH:mm")
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">-</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        @if (solicitud.Estado == "PENDIENTE")
                                                        {
                                                            <button class="btn btn-danger btn-sm" onclick="eliminarSolicitud(@solicitud.Id)" title="Eliminar solicitud">
                                                                <i class="fas fa-trash"></i> Eliminar
                                                            </button>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">-</span>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-4">
                                    <i class="fas fa-paper-plane fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted">No has enviado solicitudes</h5>
                                    <p class="text-muted">Las solicitudes que envíes aparecerán aquí.</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Solicitudes Recibidas -->
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-inbox"></i> Solicitudes Recibidas
                            </h5>
                        </div>
                        <div class="card-body">
                            @if (solicitudesRecibidas != null && solicitudesRecibidas.Any())
                            {
                                @foreach (var solicitud in solicitudesRecibidas)
                                {
                                    <div class="card mb-3 @(solicitud.Estado == "PENDIENTE" ? "border-warning" : solicitud.Estado == "ACEPTADA" ? "border-success" : "border-danger")">
                                        <div class="card-body">
                                            <div class="row align-items-center">
                                                <div class="col-md-8">
                                                    <h6 class="card-title mb-1">
                                                        @if (solicitud.Tipo == "INVITACION_GRUPO")
                                                        {
                                                            <i class="fas fa-user-plus text-primary"></i>
                                                            <strong>Invitación al Grupo @solicitud.GrupoNumero</strong>
                                                        }
                                                        else
                                                        {
                                                            <i class="fas fa-handshake text-info"></i>
                                                            <strong>Solicitud de Ingreso al Grupo @solicitud.GrupoNumero</strong>
                                                        }
                                                    </h6>
                                                    <p class="card-text mb-1">
                                                        <strong>De:</strong> @solicitud.EstudianteRemitente?.Nombre @solicitud.EstudianteRemitente?.Apellidos
                                                    </p>
                                                    @if (!string.IsNullOrEmpty(solicitud.Mensaje))
                                                    {
                                                        <p class="card-text mb-1">
                                                            <strong>Mensaje:</strong> @solicitud.Mensaje
                                                        </p>
                                                    }
                                                    <small class="text-muted">
                                                        Recibida: @solicitud.FechaCreacion.ToString("dd/MM/yyyy HH:mm")
                                                        @if (solicitud.FechaRespuesta.HasValue)
                                                        {
                                                            <span><br>Respondida: @solicitud.FechaRespuesta.Value.ToString("dd/MM/yyyy HH:mm")</span>
                                                        }
                                                    </small>
                                                </div>
                                                <div class="col-md-4 text-right">
                                                    @switch (solicitud.Estado)
                                                    {
                                                        case "PENDIENTE":
                                                            <div class="btn-group-vertical" role="group">
                                                                <button class="btn btn-success btn-sm mb-2" onclick="responderSolicitud(@solicitud.Id, true)">
                                                                    <i class="fas fa-check"></i> Aceptar
                                                                </button>
                                                                <button class="btn btn-danger btn-sm" onclick="responderSolicitud(@solicitud.Id, false)">
                                                                    <i class="fas fa-times"></i> Rechazar
                                                                </button>
                                                            </div>
                                                            break;
                                                        case "ACEPTADA":
                                                            <span class="badge badge-success badge-lg">
                                                                <i class="fas fa-check"></i> Aceptada
                                                            </span>
                                                            break;
                                                        case "RECHAZADA":
                                                            <span class="badge badge-danger badge-lg">
                                                                <i class="fas fa-times"></i> Rechazada
                                                            </span>
                                                            break;
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="text-center py-4">
                                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted">No has recibido solicitudes</h5>
                                    <p class="text-muted">Las solicitudes que recibas aparecerán aquí.</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .sidebar {
        min-height: 100vh;
        box-shadow: 2px 0 5px rgba(0,0,0,0.1);
    }

    .nav-link {
        color: #333;
        padding: 0.75rem 1rem;
        margin-bottom: 0.25rem;
        border-radius: 0.375rem;
        transition: all 0.3s ease;
    }

    .nav-link:hover {
        background-color: #f8f9fa;
        color: #007bff;
        transform: translateX(5px);
    }

    .nav-link.active {
        background-color: #007bff;
        color: white;
    }

    .card {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        border: 1px solid rgba(0, 0, 0, 0.125);
    }

    .main-content {
        background-color: #f8f9fa;
        min-height: 100vh;
    }

    .badge {
        font-size: 0.75em;
    }

    .badge-lg {
        font-size: 0.9em;
        padding: 0.5rem 1rem;
    }

    .btn-group-vertical .btn {
        width: 100%;
    }
</style>

<script>
    function eliminarSolicitud(solicitudId) {
        if (confirm('¿Estás seguro de que quieres eliminar esta solicitud? Esta acción no se puede deshacer.')) {
            fetch('@Url.Action("EliminarSolicitud", "Estudiante")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                },
                body: JSON.stringify({ solicitudId: solicitudId })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert(data.message);
                    location.reload();
                } else {
                    alert('Error: ' + data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error al eliminar la solicitud');
            });
        }
    }

    function responderSolicitud(solicitudId, aceptar) {
        const accion = aceptar ? 'aceptar' : 'rechazar';
        if (confirm('¿Estás seguro de que quieres ' + accion + ' esta solicitud?')) {
            fetch('@Url.Action("ResponderSolicitud", "Estudiante")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                },
                body: JSON.stringify({ solicitudId: solicitudId, aceptar: aceptar })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert(data.message);
                    location.reload();
                } else {
                    alert('Error: ' + data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error al procesar la solicitud');
            });
        }
    }
</script>

@Html.AntiForgeryToken()
