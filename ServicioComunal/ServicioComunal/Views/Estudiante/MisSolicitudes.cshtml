@{
    ViewData["Title"] = "Mis Solicitudes";
    var solicitudesEnviadas = ViewBag.SolicitudesEnviadas as List<ServicioComunal.Models.Solicitud>;
    var solicitudesRecibidas = ViewBag.SolicitudesRecibidas as List<ServicioComunal.Models.Solicitud>;
    var tieneGrupo = (bool)ViewBag.TieneGrupo;
    var estudiante = ViewBag.Estudiante as ServicioComunal.Models.Estudiante;
    var grupo = ViewBag.Grupo as ServicioComunal.Models.Grupo;
    var gruposDisponibles = ViewBag.GruposDisponibles as List<ServicioComunal.Models.Grupo>;
}

<div class="container-fluid estudiante-theme">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-2 sidebar">
            <div class="text-center mb-4">
                <img src="~/images/logo-liceo.svg" alt="Logo" style="width: 60px; height: 60px;">
                <h5 class="mt-2">@estudiante?.Nombre @estudiante?.Apellidos</h5>
                <small class="text-muted">Estudiante - @estudiante?.Clase</small>
            </div>

            <nav class="nav flex-column">
                @if (tieneGrupo)
                {
                    <a class="nav-link" href="@Url.Action("Dashboard", "Estudiante")">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                    </a>
                    <a class="nav-link" href="@Url.Action("MiGrupo", "Estudiante")">
                        <i class="fas fa-users"></i> Mi Grupo
                    </a>
                    <a class="nav-link" href="@Url.Action("Entregas", "Estudiante")">
                        <i class="fas fa-file-upload"></i> Entregas
                    </a>
                }
                else
                {
                    <div class="alert alert-warning alert-sm">
                        <i class="fas fa-exclamation-triangle"></i>
                        <small>Sin grupo asignado</small>
                    </div>
                }
                
                <a class="nav-link active" href="@Url.Action("MisSolicitudes", "Estudiante")">
                    <i class="fas fa-bell"></i> Solicitudes
                </a>
                <a class="nav-link" href="@Url.Action("MiPerfil", "Estudiante")">
                    <i class="fas fa-user"></i> Mi Perfil
                </a>
                <hr>
                <a class="logout-btn" href="@Url.Action("Logout", "Auth")">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Cerrar Sesión</span>
                </a>
            </nav>
        </div>

        <!-- Contenido principal -->
        <div class="col-md-10 main-content">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Mis Solicitudes</h2>
                @if (tieneGrupo)
                {
                    <a href="@Url.Action("MiGrupo", "Estudiante")" class="btn btn-primary">
                        <i class="fas fa-arrow-left"></i> Volver a Mi Grupo
                    </a>
                }
                else
                {
                    <div class="text-muted">
                        <small><i class="fas fa-info-circle"></i> Busca un grupo al que solicitar ingreso</small>
                    </div>
                }
            </div>

            <!-- Grupos Disponibles (solo para estudiantes sin grupo) -->
            @if (!tieneGrupo && gruposDisponibles != null && gruposDisponibles.Any())
            {
                <div class="row mb-4">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header bg-success text-white">
                                <h5 class="mb-0">
                                    <i class="fas fa-users"></i> Grupos Disponibles para Solicitar Ingreso
                                </h5>
                            </div>
                            <div class="card-body">
                                @if (gruposDisponibles.Count == 0)
                                {
                                    <p class="text-muted">No hay grupos disponibles en este momento.</p>
                                }
                                else
                                {
                                    <div class="row">
                                        @foreach (var grupoDisponible in gruposDisponibles)
                                        {
                                            <div class="col-md-6 mb-3">
                                                <div class="card border-success">
                                                    <div class="card-body">
                                                        <h6 class="card-title">
                                                            <i class="fas fa-users text-success"></i> Grupo @grupoDisponible.Numero
                                                        </h6>
                                                        <div class="mb-2">
                                                            <strong>Líder:</strong>
                                                            @if (grupoDisponible.Lider != null)
                                                            {
                                                                <span class="text-primary">
                                                                    <i class="fas fa-crown text-warning"></i> 
                                                                    @grupoDisponible.Lider.Nombre @grupoDisponible.Lider.Apellidos
                                                                </span>
                                                            }
                                                            else
                                                            {
                                                                <span class="text-muted">No asignado</span>
                                                            }
                                                        </div>
                                                        <div class="mb-3">
                                                            <small class="text-muted">
                                                                <i class="fas fa-user-friends"></i> 
                                                                @grupoDisponible.GruposEstudiantes.Count miembro(s)
                                                            </small>
                                                        </div>
                                                        @if (grupoDisponible.Lider != null)
                                                        {
                                                            <button class="btn btn-outline-success btn-sm" 
                                                                    onclick="enviarSolicitud(@grupoDisponible.Numero, '@grupoDisponible.Lider.Nombre @grupoDisponible.Lider.Apellidos')">
                                                                <i class="fas fa-paper-plane"></i> Solicitar Ingreso
                                                            </button>
                                                        }
                                                        else
                                                        {
                                                            <button class="btn btn-secondary btn-sm" disabled>
                                                                <i class="fas fa-ban"></i> Sin líder asignado
                                                            </button>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Solicitudes Enviadas (solo para estudiantes sin grupo) -->
            @if (!tieneGrupo)
            {
                <div class="row mb-4">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header bg-primary text-white">
                                <h5 class="mb-0">
                                    <i class="fas fa-paper-plane"></i> Solicitudes Enviadas
                                </h5>
                        </div>
                        <div class="card-body">
                            @if (solicitudesEnviadas != null && solicitudesEnviadas.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Tipo</th>
                                                <th>Destinatario</th>
                                                <th>Grupo</th>
                                                <th>Fecha Enviada</th>
                                                <th>Estado</th>
                                                <th>Fecha Respuesta</th>
                                                <th>Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var solicitud in solicitudesEnviadas)
                                            {
                                                <tr>
                                                    <td>
                                                        @if (solicitud.Tipo == "INVITACION_GRUPO")
                                                        {
                                                            <span class="badge badge-primary">
                                                                <i class="fas fa-user-plus"></i> Invitación
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge badge-info">
                                                                <i class="fas fa-handshake"></i> Solicitud Ingreso
                                                            </span>
                                                        }
                                                    </td>
                                                    <td>@solicitud.EstudianteDestinatario?.Nombre @solicitud.EstudianteDestinatario?.Apellidos</td>
                                                    <td>
                                                        @if (solicitud.GrupoNumero.HasValue)
                                                        {
                                                            <span class="badge badge-secondary">Grupo @solicitud.GrupoNumero</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">-</span>
                                                        }
                                                    </td>
                                                    <td>@solicitud.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</td>
                                                    <td>
                                                        @switch (solicitud.Estado)
                                                        {
                                                            case "PENDIENTE":
                                                                <span class="badge badge-warning">
                                                                    <i class="fas fa-clock"></i> Pendiente
                                                                </span>
                                                                break;
                                                            case "ACEPTADA":
                                                                <span class="badge badge-success">
                                                                    <i class="fas fa-check"></i> Aceptada
                                                                </span>
                                                                break;
                                                            case "RECHAZADA":
                                                                <span class="badge badge-danger">
                                                                    <i class="fas fa-times"></i> Rechazada
                                                                </span>
                                                                break;
                                                        }
                                                    </td>
                                                    <td>
                                                        @if (solicitud.FechaRespuesta.HasValue)
                                                        {
                                                            @solicitud.FechaRespuesta.Value.ToString("dd/MM/yyyy HH:mm")
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">-</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        @if (solicitud.Estado == "PENDIENTE")
                                                        {
                                                            <button class="btn btn-danger btn-sm" onclick="eliminarSolicitud(@solicitud.Id)" title="Eliminar solicitud">
                                                                <i class="fas fa-trash"></i> Eliminar
                                                            </button>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">-</span>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-4">
                                    <i class="fas fa-paper-plane fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted">No has enviado solicitudes</h5>
                                    <p class="text-muted">Las solicitudes que envíes aparecerán aquí.</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            }

            <!-- Solicitudes Recibidas - Para todos los miembros del grupo -->
            @if (tieneGrupo)
            {
                var solicitudesGrupo = ViewBag.SolicitudesGrupo as List<ServicioComunal.Models.Solicitud>;
                var esLider = (bool)ViewBag.EsLider;
                
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header bg-success text-white">
                                <h5 class="mb-0">
                                    <i class="fas fa-inbox"></i> Solicitudes Recibidas
                                    @if (!esLider)
                                    {
                                        <span class="badge bg-light text-dark ms-2">
                                            <i class="fas fa-eye"></i> Solo visualización
                                        </span>
                                    }
                                </h5>
                            </div>
                            <div class="card-body">
                                @if (solicitudesGrupo != null && solicitudesGrupo.Any())
                            {
                                @foreach (var solicitud in solicitudesGrupo)
                                {
                                    <div class="card mb-3 border-warning">
                                        <div class="card-body">
                                            <div class="row align-items-center">
                                                <div class="col-md-8">
                                                    <h6 class="card-title mb-1">
                                                        <i class="fas fa-handshake text-info"></i>
                                                        <strong>Solicitud de Ingreso al Grupo @solicitud.GrupoNumero</strong>
                                                    </h6>
                                                    <p class="card-text mb-1">
                                                        <strong>De:</strong> @solicitud.EstudianteRemitente?.Nombre @solicitud.EstudianteRemitente?.Apellidos
                                                        <span class="badge bg-secondary ms-2">@solicitud.EstudianteRemitente?.Clase</span>
                                                    </p>
                                                    @if (!string.IsNullOrEmpty(solicitud.Mensaje))
                                                    {
                                                        <p class="card-text mb-1">
                                                            <strong>Mensaje:</strong> @solicitud.Mensaje
                                                        </p>
                                                    }
                                                    <small class="text-muted">
                                                        <i class="fas fa-calendar-alt"></i> Recibida: @solicitud.FechaCreacion.ToString("dd/MM/yyyy HH:mm")
                                                    </small>
                                                </div>
                                                <div class="col-md-4 text-right">
                                                    @if (esLider)
                                                    {
                                                        <div class="btn-group-vertical" role="group">
                                                            <button class="btn btn-success btn-sm mb-2" onclick="responderSolicitud(@solicitud.Id, true)">
                                                                <i class="fas fa-check"></i> Aceptar
                                                            </button>
                                                            <button class="btn btn-danger btn-sm" onclick="responderSolicitud(@solicitud.Id, false)">
                                                                <i class="fas fa-times"></i> Rechazar
                                                            </button>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-warning text-dark">
                                                            <i class="fas fa-clock"></i> Pendiente
                                                        </span>
                                                        <br>
                                                        <small class="text-muted mt-2 d-block">Solo el líder puede responder</small>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="text-center py-4">
                                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted">No hay solicitudes pendientes</h5>
                                    <p class="text-muted">Las solicitudes de ingreso al grupo aparecerán aquí.</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</div>

<style>
    .sidebar {
        min-height: 100vh;
        box-shadow: 2px 0 5px rgba(0,0,0,0.1);
    }

    .nav-link {
        color: #333;
        padding: 0.75rem 1rem;
        margin-bottom: 0.25rem;
        border-radius: 0.375rem;
        transition: all 0.3s ease;
    }

    .nav-link:hover {
        background-color: #f8f9fa;
        color: #007bff;
        transform: translateX(5px);
    }

    .nav-link.active {
        background-color: #007bff;
        color: white;
    }

    .card {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        border: 1px solid rgba(0, 0, 0, 0.125);
    }

    .main-content {
        background-color: #f8f9fa;
        min-height: 100vh;
    }

    .badge {
        font-size: 0.75em;
    }

    .badge-lg {
        font-size: 0.9em;
        padding: 0.5rem 1rem;
    }

    .btn-group-vertical .btn {
        width: 100%;
    }
</style>

<script>
    function enviarSolicitud(grupoNumero, liderNombre) {
        Swal.fire({
            title: '¿Solicitar ingreso?',
            html: `¿Estás seguro de que deseas solicitar ingreso al <strong>Grupo ${grupoNumero}</strong> liderado por <strong>${liderNombre}</strong>?`,
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#28a745',
            cancelButtonColor: '#6c757d',
            confirmButtonText: '<i class="fas fa-paper-plane"></i> Sí, enviar solicitud',
            cancelButtonText: '<i class="fas fa-times"></i> Cancelar'
        }).then((result) => {
            if (!result.isConfirmed) {
                return;
            }
            
            // Mostrar loading
            Swal.fire({
                title: 'Enviando solicitud...',
                html: 'Por favor espera',
                allowOutsideClick: false,
                allowEscapeKey: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });
            
            // Obtener token CSRF
            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
            
            // Crear FormData en lugar de JSON
            const formData = new FormData();
            formData.append('grupoNumero', grupoNumero);
            formData.append('__RequestVerificationToken', token);
            
            fetch('@Url.Action("SolicitarIngreso", "Estudiante")', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        title: '¡Solicitud Enviada!',
                        text: data.message || 'Tu solicitud ha sido enviada correctamente al líder del grupo.',
                        icon: 'success',
                        confirmButtonColor: '#28a745',
                        confirmButtonText: 'Aceptar'
                    }).then(() => {
                        location.reload();
                    });
                } else {
                    Swal.fire({
                        title: 'Error',
                        text: data.message || 'No se pudo enviar la solicitud',
                        icon: 'error',
                        confirmButtonColor: '#dc3545',
                        confirmButtonText: 'Aceptar'
                    });
                }
            })
            .catch(error => {
                console.error('Error:', error);
                Swal.fire({
                    title: 'Error',
                    text: 'Error al enviar la solicitud. Por favor intenta de nuevo.',
                    icon: 'error',
                    confirmButtonColor: '#dc3545',
                    confirmButtonText: 'Aceptar'
                });
            });
        });
    }

    function eliminarSolicitud(solicitudId) {
        Swal.fire({
            title: '¿Eliminar solicitud?',
            text: '¿Estás seguro de que quieres eliminar esta solicitud? Esta acción no se puede deshacer.',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#dc3545',
            cancelButtonColor: '#6c757d',
            confirmButtonText: '<i class="fas fa-trash"></i> Sí, eliminar',
            cancelButtonText: '<i class="fas fa-times"></i> Cancelar'
        }).then((result) => {
            if (!result.isConfirmed) {
                return;
            }
            
            // Obtener token CSRF
            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
            
            fetch('@Url.Action("EliminarSolicitud", "Estudiante")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': token
                },
                body: JSON.stringify({ solicitudId: solicitudId })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        title: '¡Eliminada!',
                        text: data.message,
                        icon: 'success',
                        confirmButtonColor: '#28a745',
                        confirmButtonText: 'Aceptar'
                    }).then(() => {
                        location.reload();
                    });
                } else {
                    Swal.fire({
                        title: 'Error',
                        text: data.message,
                        icon: 'error',
                        confirmButtonColor: '#dc3545',
                        confirmButtonText: 'Aceptar'
                    });
                }
            })
            .catch(error => {
                console.error('Error:', error);
                Swal.fire({
                    title: 'Error',
                    text: 'Error al eliminar la solicitud',
                    icon: 'error',
                    confirmButtonColor: '#dc3545',
                    confirmButtonText: 'Aceptar'
                });
            });
        });
    }

    function responderSolicitud(solicitudId, aceptar) {
        const accion = aceptar ? 'aceptar' : 'rechazar';
        const titulo = aceptar ? '¿Aceptar solicitud?' : '¿Rechazar solicitud?';
        const texto = aceptar 
            ? '¿Estás seguro de que quieres aceptar esta solicitud? El estudiante será agregado a tu grupo.' 
            : '¿Estás seguro de que quieres rechazar esta solicitud?';
        const icono = aceptar ? 'question' : 'warning';
        const btnColor = aceptar ? '#28a745' : '#dc3545';
        const btnTexto = aceptar ? '<i class="fas fa-check"></i> Sí, aceptar' : '<i class="fas fa-times"></i> Sí, rechazar';
        
        Swal.fire({
            title: titulo,
            text: texto,
            icon: icono,
            showCancelButton: true,
            confirmButtonColor: btnColor,
            cancelButtonColor: '#6c757d',
            confirmButtonText: btnTexto,
            cancelButtonText: '<i class="fas fa-ban"></i> Cancelar'
        }).then((result) => {
            if (!result.isConfirmed) {
                return;
            }
            
            // Obtener token CSRF
            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
            
            fetch('@Url.Action("ResponderSolicitud", "Estudiante")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': token
                },
                body: JSON.stringify({ solicitudId: solicitudId, aceptar: aceptar })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        title: aceptar ? '¡Solicitud Aceptada!' : 'Solicitud Rechazada',
                        text: data.message,
                        icon: aceptar ? 'success' : 'info',
                        confirmButtonColor: '#28a745',
                        confirmButtonText: 'Aceptar'
                    }).then(() => {
                        location.reload();
                    });
                } else {
                    Swal.fire({
                        title: 'Error',
                        text: data.message,
                        icon: 'error',
                        confirmButtonColor: '#dc3545',
                        confirmButtonText: 'Aceptar'
                    });
                }
            })
            .catch(error => {
                console.error('Error:', error);
                Swal.fire({
                    title: 'Error',
                    text: 'Error al procesar la solicitud',
                    icon: 'error',
                    confirmButtonColor: '#dc3545',
                    confirmButtonText: 'Aceptar'
                });
            });
        });
    }
</script>

@Html.AntiForgeryToken()
