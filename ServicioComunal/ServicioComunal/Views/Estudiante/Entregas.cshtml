@{
    ViewData["Title"] = "Entregas - Estudiante";
    var estudiante = ViewBag.Estudiante as ServicioComunal.Models.Estudiante;
    var grupo = ViewBag.Grupo as ServicioComunal.Models.Grupo;
    var entregas = ViewBag.Entregas as List<ServicioComunal.Models.Entrega>;
}

<div class="container-fluid estudiante-theme">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-2 sidebar">
            <div class="text-center mb-4">
                <img src="~/images/logo-liceo.svg" alt="Logo" style="width: 60px; height: 60px;">
                <h5 class="mt-2">@estudiante?.Nombre @estudiante?.Apellidos</h5>
                <small class="text-muted">Estudiante - @estudiante?.Clase</small>
            </div>

            <nav class="nav flex-column">
                <a class="nav-link" href="@Url.Action("Dashboard", "Estudiante")">
                    <i class="fas fa-tachometer-alt"></i> Dashboard
                </a>
                <a class="nav-link" href="@Url.Action("MiGrupo", "Estudiante")">
                    <i class="fas fa-users"></i> Mi Grupo
                </a>
                <a class="nav-link active" href="@Url.Action("Entregas", "Estudiante")">
                    <i class="fas fa-file-upload"></i> Entregas
                </a>
                <a class="nav-link" href="@Url.Action("MisSolicitudes", "Estudiante")">
                    <i class="fas fa-bell"></i> Solicitudes
                </a>
                <a class="nav-link" href="@Url.Action("MiPerfil", "Estudiante")">
                    <i class="fas fa-user"></i> Mi Perfil
                </a>
                <hr>
                <a class="logout-btn" href="@Url.Action("Logout", "Auth")">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Cerrar Sesión</span>
                </a>
            </nav>
        </div>

        <!-- Contenido principal -->
        <div class="col-md-10 main-content">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Entregas del Grupo</h2>
                <div class="text-muted">
                    <i class="fas fa-users"></i> Grupo @grupo?.Numero
                </div>
            </div>

            <!-- Estadísticas de entregas -->
            <div class="row mb-3">
                <div class="col-md-2">
                    <div class="card bg-primary text-white" style="height: 90px;">
                        <div class="card-body text-center p-2">
                            <i class="fas fa-file-upload mb-1"></i>
                            <h6 class="mb-0">@(entregas?.Count ?? 0)</h6>
                            <small style="font-size: 0.7rem;">Total Entregas</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="card bg-primary text-white" style="height: 90px;">
                        <div class="card-body text-center p-2">
                            <i class="fas fa-check-circle mb-1"></i>
                            <h6 class="mb-0">@(entregas?.Count(e => !string.IsNullOrEmpty(e.Retroalimentacion)) ?? 0)</h6>
                            <small style="font-size: 0.7rem;">Revisadas</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="card bg-primary text-white" style="height: 90px;">
                        <div class="card-body text-center p-2">
                            <i class="fas fa-clock mb-1"></i>
                            <h6 class="mb-0">@(entregas?.Count(e => string.IsNullOrEmpty(e.Retroalimentacion) && string.IsNullOrEmpty(e.ArchivoRuta)) ?? 0)</h6>
                            <small style="font-size: 0.7rem;">Pendientes</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="card bg-primary text-white" style="height: 90px;">
                        <div class="card-body text-center p-2">
                            <i class="fas fa-upload mb-1"></i>
                            <h6 class="mb-0">@(entregas?.Count(e => string.IsNullOrEmpty(e.Retroalimentacion) && !string.IsNullOrEmpty(e.ArchivoRuta)) ?? 0)</h6>
                            <small style="font-size: 0.7rem;">Enviadas</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="card bg-primary text-white" style="height: 90px;">
                        <div class="card-body text-center p-2">
                            <i class="fas fa-edit mb-1"></i>
                            <h6 class="mb-0">@(entregas?.Count(e => !string.IsNullOrEmpty(e.Retroalimentacion) && e.Retroalimentacion.StartsWith("CAMBIOS SOLICITADOS:")) ?? 0)</h6>
                            <small style="font-size: 0.7rem;">Requieren Cambios</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="card bg-primary text-white" style="height: 90px;">
                        <div class="card-body text-center p-2">
                            <i class="fas fa-calendar-alt mb-1"></i>
                            <h6 class="mb-0">@(entregas?.Count(e => e.FechaLimite > DateTime.Now) ?? 0)</h6>
                            <small style="font-size: 0.7rem;">En Plazo</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Lista de entregas -->
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-list"></i> Lista de Entregas Asignadas
                            </h5>
                        </div>
                        <div class="card-body">
                            @if (entregas != null && entregas.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead class="thead-light">
                                            <tr>
                                                <th><i class="fas fa-file"></i> Nombre</th>
                                                <th><i class="fas fa-info-circle"></i> Descripción</th>
                                                <th><i class="fas fa-calendar"></i> Fecha Límite</th>
                                                <th><i class="fas fa-flag"></i> Estado</th>
                                                <th><i class="fas fa-cogs"></i> Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var entrega in entregas)
                                            {
                                                <tr>
                                                    <td>
                                                        <strong>@entrega.Nombre</strong>
                                                    </td>
                                                    <td>
                                                        @(entrega.Descripcion.Length > 80 ? entrega.Descripcion.Substring(0, 80) + "..." : entrega.Descripcion)
                                                    </td>
                                                    <td>
                                                        @entrega.FechaLimite.ToString("dd/MM/yyyy HH:mm")
                                                        @if (entrega.FechaLimite < DateTime.Now)
                                                        {
                                                            <br><small class="text-danger"><i class="fas fa-exclamation-triangle"></i> Vencida</small>
                                                        }
                                                        else if (entrega.FechaLimite <= DateTime.Now.AddDays(2))
                                                        {
                                                            <br><small class="text-warning"><i class="fas fa-clock"></i> Próxima a vencer</small>
                                                        }
                                                    </td>
                                                    <td>
                                                        @if (!string.IsNullOrEmpty(entrega.Retroalimentacion))
                                                        {
                                                            if (entrega.Retroalimentacion.StartsWith("CAMBIOS SOLICITADOS:"))
                                                            {
                                                                <span class="badge badge-danger"><i class="fas fa-edit"></i> Requiere Cambios</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="badge badge-success"><i class="fas fa-check"></i> Revisada</span>
                                                            }
                                                        }
                                                        else if (!string.IsNullOrEmpty(entrega.ArchivoRuta))
                                                        {
                                                            <span class="badge badge-info"><i class="fas fa-upload"></i> Enviada</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge badge-warning"><i class="fas fa-clock"></i> Pendiente</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        <div class="btn-group" role="group">
                                                            <a href="@Url.Action("DetalleEntrega", "Estudiante", new { id = entrega.Identificacion })" 
                                                               class="btn btn-sm btn-primary" title="Ver Detalles">
                                                                <i class="fas fa-eye"></i>
                                                            </a>
                                                            @if (!string.IsNullOrEmpty(entrega.ArchivoRuta))
                                                            {
                                                                <a href="@Url.Action("DescargarArchivo", "Estudiante", new { entregaId = entrega.Identificacion, tipo = "entrega" })" 
                                                                   class="btn btn-sm btn-info" title="Descargar Mi Entrega">
                                                                    <i class="fas fa-file-download"></i>
                                                                </a>
                                                            }
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-5">
                                    <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
                                    <h4 class="text-muted">No hay entregas asignadas</h4>
                                    <p class="text-muted">Las entregas aparecerán aquí cuando tu tutor las asigne al grupo.</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* All styling is now handled by main CSS with consistent colors */
    .sidebar {
        min-height: 100vh;
    }

    .nav-link {
        color: #495057;
        padding: 0.75rem 1rem;
        margin-bottom: 0.25rem;
        border-radius: 0.375rem;
        transition: all 0.3s ease;
    }

    .nav-link:hover {
        background-color: #f5f1e8;
        color: #6c8d47;
        transform: translateX(5px);
    }

    .nav-link.active {
        background: linear-gradient(135deg, #6c8d47 0%, #5a7a3a 100%);
        color: white;
    }

    .card {
        box-shadow: 0 0.125rem 0.25rem rgba(139, 119, 101, 0.075);
        border: 1px solid #e0d5c7;
    }

    .main-content {
        background: linear-gradient(135deg, #f5f1e8 0%, #ede4d3 100%);
        min-height: 100vh;
    }

    .badge {
        font-size: 0.75em;
    }

    .table th {
        border-top: none;
        background-color: #f5f1e8;
        font-weight: 600;
    }

    .btn-group .btn {
        margin-right: 2px;
    }

    .btn-group .btn:last-child {
        margin-right: 0;
    }
</style>
