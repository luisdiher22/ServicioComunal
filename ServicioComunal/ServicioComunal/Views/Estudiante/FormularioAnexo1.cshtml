@model ServicioComunal.Models.Anexo1FormularioDto
@{
    ViewData["Title"] = "Formulario Anexo #1";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var entrega = ViewBag.Entrega as ServicioComunal.Models.Entrega;
    var estudiantes = ViewBag.Estudiantes as List<ServicioComunal.Models.Estudiante>;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-file-alt"></i>
                        Anexo #1: @entrega?.Nombre
                    </h4>
                    <p class="mb-0">Completar la información solicitada para generar el PDF</p>
                </div>
                
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle"></i>
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-controller="Estudiante" asp-action="GuardarAnexo1" method="post" id="anexo1Form">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="entregaId" value="@entrega?.Identificacion" />
                        
                        <!-- Información del Proyecto -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h5 class="text-primary border-bottom pb-2">
                                    <i class="fas fa-project-diagram"></i>
                                    Información del Proyecto
                                </h5>
                            </div>
                            <div class="col-12">
                                <div class="form-group mb-3">
                                    <label asp-for="NombreProyecto" class="form-label fw-bold">
                                        Nombre del Proyecto <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="NombreProyecto" name="NombreProyecto" id="NombreProyecto" class="form-control" required 
                                           placeholder="Ingrese el nombre del proyecto">
                                    <span asp-validation-for="NombreProyecto" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Información de Estudiantes -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h5 class="text-primary border-bottom pb-2">
                                    <i class="fas fa-users"></i>
                                    Estudiantes del Grupo
                                </h5>
                            </div>
                            
                            @for (int i = 1; i <= 4; i++)
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="card bg-light">
                                        <div class="card-body py-3">
                                            <h6 class="card-title text-secondary mb-2">
                                                <i class="fas fa-user"></i>
                                                Estudiante @i
                                            </h6>
                                            
                                            <div class="form-group mb-2">
                                                <label class="form-label fw-bold">Nombre Completo</label>
                                                @switch (i)
                                                {
                                                    case 1:
                                                        <input asp-for="Estudiante1" name="Estudiante1" class="form-control" 
                                                               placeholder="Nombre completo del estudiante 1"
                                                               value="@(estudiantes?.ElementAtOrDefault(0)?.Nombre + " " + estudiantes?.ElementAtOrDefault(0)?.Apellidos)">
                                                        break;
                                                    case 2:
                                                        <input asp-for="Estudiante2" name="Estudiante2" class="form-control" 
                                                               placeholder="Nombre completo del estudiante 2"
                                                               value="@(estudiantes?.ElementAtOrDefault(1)?.Nombre + " " + estudiantes?.ElementAtOrDefault(1)?.Apellidos)">
                                                        break;
                                                    case 3:
                                                        <input asp-for="Estudiante3" name="Estudiante3" class="form-control" 
                                                               placeholder="Nombre completo del estudiante 3"
                                                               value="@(estudiantes?.ElementAtOrDefault(2)?.Nombre + " " + estudiantes?.ElementAtOrDefault(2)?.Apellidos)">
                                                        break;
                                                    case 4:
                                                        <input asp-for="Estudiante4" name="Estudiante4" class="form-control" 
                                                               placeholder="Nombre completo del estudiante 4"
                                                               value="@(estudiantes?.ElementAtOrDefault(3)?.Nombre + " " + estudiantes?.ElementAtOrDefault(3)?.Apellidos)">
                                                        break;
                                                }
                                            </div>
                                            
                                            <div class="form-group">
                                                <label class="form-label fw-bold">Sección</label>
                                                @switch (i)
                                                {
                                                    case 1:
                                                        <input asp-for="Seccion1" name="Seccion1" class="form-control" 
                                                               placeholder="Sección del estudiante 1"
                                                               value="@estudiantes?.ElementAtOrDefault(0)?.Clase">
                                                        break;
                                                    case 2:
                                                        <input asp-for="Seccion2" name="Seccion2" class="form-control" 
                                                               placeholder="Sección del estudiante 2"
                                                               value="@estudiantes?.ElementAtOrDefault(1)?.Clase">
                                                        break;
                                                    case 3:
                                                        <input asp-for="Seccion3" name="Seccion3" class="form-control" 
                                                               placeholder="Sección del estudiante 3"
                                                               value="@estudiantes?.ElementAtOrDefault(2)?.Clase">
                                                        break;
                                                    case 4:
                                                        <input asp-for="Seccion4" name="Seccion4" class="form-control" 
                                                               placeholder="Sección del estudiante 4"
                                                               value="@estudiantes?.ElementAtOrDefault(3)?.Clase">
                                                        break;
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Botones de Acción -->
                        <div class="row">
                            <div class="col-12">
                                <div class="d-flex justify-content-between">
                                    <a href="@Url.Action("Index", "Estudiante")" class="btn btn-secondary">
                                        <i class="fas fa-arrow-left"></i>
                                        Volver
                                    </a>
                                    
                                    <div>
                                        <button type="button" class="btn btn-outline-primary me-2" onclick="guardarBorrador()">
                                            <i class="fas fa-save"></i>
                                            Guardar Borrador
                                        </button>
                                        
                                        <button type="submit" class="btn btn-success">
                                            <i class="fas fa-file-pdf"></i>
                                            Generar PDF Final
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function guardarBorrador() {
            // Implementar lógica para guardar borrador sin generar PDF
            alert('Funcionalidad de borrador pendiente de implementar');
        }

        // Validación del formulario optimizada
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('anexo1Form');
            if (!form) return;
            
            form.addEventListener('submit', function(e) {
                console.log('Submit event triggered');
                
                // SIEMPRE prevenir el comportamiento por defecto para manejar manualmente
                e.preventDefault();
                
                // Usar un selector más específico que funcione con ASP.NET Core
                const nombreProyectoInput = document.getElementById('NombreProyecto') || 
                                           this.querySelector('input[name="NombreProyecto"]') ||
                                           this.querySelector('[asp-for="NombreProyecto"]');
                
                const nombreProyecto = nombreProyectoInput ? nombreProyectoInput.value.trim() : '';
                
                console.log('Validando formulario - Input encontrado:', !!nombreProyectoInput, 'Valor:', nombreProyecto);
                
                if (!nombreProyecto) {
                    alert('Por favor, ingrese el nombre del proyecto');
                    // Enfocar el campo para mejor UX
                    if (nombreProyectoInput) {
                        nombreProyectoInput.focus();
                        nombreProyectoInput.classList.add('is-invalid');
                    }
                    return false;
                }

                // Limpiar cualquier clase de error
                if (nombreProyectoInput) {
                    nombreProyectoInput.classList.remove('is-invalid');
                }
                
                console.log('Validación exitosa, enviando formulario');

                // Mostrar indicador de carga solo si la validación pasa
                const submitBtn = this.querySelector('button[type="submit"]');
                if (submitBtn) {
                    submitBtn.disabled = true;
                    submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Generando PDF...';
                    
                    // Timeout de seguridad
                    setTimeout(function() {
                        if (submitBtn.disabled) {
                            submitBtn.disabled = false;
                            submitBtn.innerHTML = '<i class="fas fa-file-pdf"></i> Generar PDF Final';
                            alert('La operación está tomando más tiempo del esperado. Por favor, intente nuevamente.');
                        }
                    }, 15000); // 15 segundos timeout
                }
                
                // Enviar el formulario usando fetch API para mayor control
                console.log('Enviando formulario manualmente via fetch...');
                
                const formData = new FormData(this);
                
                // Log de los datos que se están enviando
                console.log('Datos del formulario:');
                for (let [key, value] of formData.entries()) {
                    console.log(`${key}: ${value}`);
                }
                
                // Usar la URL correcta para GuardarAnexo1
                const actionUrl = '/Estudiante/GuardarAnexo1';
                console.log('URL de destino:', actionUrl);
                
                fetch(actionUrl, {
                    method: 'POST',
                    body: formData,
                    redirect: 'follow' // Seguir redirecciones automáticamente
                })
                .then(response => {
                    console.log('Respuesta recibida:', response.status, 'URL:', response.url);
                    if (response.ok) {
                        // Si la respuesta es exitosa, redirigir a la URL final
                        console.log('POST exitoso, redirigiendo a:', response.url);
                        window.location.href = response.url;
                    } else {
                        throw new Error('Error en la respuesta: ' + response.status);
                    }
                })
                .catch(error => {
                    console.error('Error al enviar formulario:', error);
                    alert('Error al procesar el formulario: ' + error.message);
                    if (submitBtn) {
                        submitBtn.disabled = false;
                        submitBtn.innerHTML = '<i class="fas fa-file-pdf"></i> Generar PDF Final';
                    }
                });
            });
        });

        // Auto-completar datos si existen datos previos
        @if (ViewBag.DatosExistentes != null)
        {
            <text>
            console.log('Cargando datos existentes...');
            // Aquí puedes agregar lógica para pre-llenar el formulario
            </text>
        }
    </script>
}
