@{
    ViewData["Title"] = "Mi Grupo - Estudiante";
    var estudiante = ViewBag.Estudiante as ServicioComunal.Models.Estudiante;
    var grupo = ViewBag.Grupo as ServicioComunal.Models.Grupo;
    var integrantesGrupo = ViewBag.IntegrantesGrupo as List<ServicioComunal.Models.Estudiante>;
    var lider = ViewBag.Lider as ServicioComunal.Models.Estudiante;
    var tutor = ViewBag.Tutor as ServicioComunal.Models.Profesor;
}

<div class="container-fluid estudiante-theme">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 sidebar p-3">
            <div class="text-center mb-4">
                <img src="~/images/logo-liceo.svg" alt="Logo" style="width: 60px; height: 60px;">
                <h5 class="mt-2">@estudiante?.Nombre @estudiante?.Apellidos</h5>
                <small class="text-muted">Estudiante - @estudiante?.Clase</small>
            </div>

            <nav class="nav flex-column">
                <a class="nav-link" href="@Url.Action("Dashboard", "Estudiante")">
                    <i class="fas fa-tachometer-alt"></i> Dashboard
                </a>
                <a class="nav-link active" href="@Url.Action("MiGrupo", "Estudiante")">
                    <i class="fas fa-users"></i> Mi Grupo
                </a>
                <a class="nav-link" href="@Url.Action("Entregas", "Estudiante")">
                    <i class="fas fa-file-upload"></i> Entregas
                </a>
                <a class="nav-link" href="@Url.Action("MisSolicitudes", "Estudiante")">
                    <i class="fas fa-bell"></i> Solicitudes
                </a>
                <a class="nav-link" href="@Url.Action("MiPerfil", "Estudiante")">
                    <i class="fas fa-user"></i> Mi Perfil
                </a>
                <hr>
                <a class="nav-link text-danger" href="@Url.Action("Logout", "Auth")">
                    <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
                </a>
            </nav>
        </div>

        <!-- Contenido principal -->
        <div class="col-md-9 main-content p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Mi Grupo</h2>
                <div class="text-muted">
                    <i class="fas fa-users"></i> Grupo @grupo?.Numero
                </div>
            </div>

            <!-- Información general del grupo -->
            <div class="row mb-4">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-info-circle"></i> Información del Grupo @grupo?.Numero
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <h6><i class="fas fa-crown text-warning"></i> Líder del Grupo:</h6>
                                    @if (lider != null)
                                    {
                                        <div class="d-flex align-items-center mb-3">
                                            <div class="bg-warning rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                <i class="fas fa-crown text-white"></i>
                                            </div>
                                            <div class="ms-3">
                                                <h6 class="mb-0">@lider.Nombre @lider.Apellidos</h6>
                                                <small class="text-muted">@lider.Clase</small>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <p class="text-muted">Sin líder asignado</p>
                                    }
                                </div>
                                <div class="col-md-6">
                                    <h6><i class="fas fa-chalkboard-teacher text-success"></i> Tutor Asignado:</h6>
                                    @if (tutor != null)
                                    {
                                        <div class="d-flex align-items-center mb-3">
                                            <div class="bg-success rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                <i class="fas fa-chalkboard-teacher text-white"></i>
                                            </div>
                                            <div class="ms-3">
                                                <h6 class="mb-0">@tutor.Nombre @tutor.Apellidos</h6>
                                                <small class="text-muted">Profesor Tutor</small>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <p class="text-muted">Sin tutor asignado aún</p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Lista de integrantes -->
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-users"></i> Integrantes del Grupo
                                <span class="badge badge-primary ms-2">@(integrantesGrupo?.Count ?? 0) miembros</span>
                            </h5>
                        </div>
                        <div class="card-body">
                            @if (integrantesGrupo != null && integrantesGrupo.Any())
                            {
                                <div class="row">
                                    @foreach (var integrante in integrantesGrupo)
                                    {
                                        <div class="col-md-6 mb-3">
                                            <div class="card border-left-primary h-100">
                                                <div class="card-body">
                                                    <div class="d-flex align-items-center">
                                                        <div class="me-3">
                                                            @if (integrante.Identificacion == estudiante?.Identificacion)
                                                            {
                                                                <div class="bg-info rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                                                    <i class="fas fa-user text-white"></i>
                                                                </div>
                                                            }
                                                            else if (integrante.Identificacion == lider?.Identificacion)
                                                            {
                                                                <div class="bg-warning rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                                                    <i class="fas fa-crown text-white"></i>
                                                                </div>
                                                            }
                                                            else
                                                            {
                                                                <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                                                    <i class="fas fa-user text-white"></i>
                                                                </div>
                                                            }
                                                        </div>
                                                        <div class="flex-grow-1">
                                                            <h6 class="mb-1">
                                                                @integrante.Nombre @integrante.Apellidos
                                                                @if (integrante.Identificacion == estudiante?.Identificacion)
                                                                {
                                                                    <span class="badge badge-info">Tú</span>
                                                                }
                                                                @if (integrante.Identificacion == lider?.Identificacion)
                                                                {
                                                                    <span class="badge badge-warning">Líder</span>
                                                                }
                                                            </h6>
                                                            <p class="text-muted mb-1">
                                                                <i class="fas fa-id-card"></i> @integrante.Identificacion
                                                            </p>
                                                            <p class="text-muted mb-0">
                                                                <i class="fas fa-graduation-cap"></i> @integrante.Clase
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-4">
                                    <i class="fas fa-users fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted">No hay integrantes en el grupo</h5>
                                    <p class="text-muted">Los integrantes aparecerán aquí cuando se unan al grupo.</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Estadísticas del grupo -->
            <div class="row mt-4">
                <div class="col-md-4">
                    <div class="card bg-primary text-white">
                        <div class="card-body text-center">
                            <i class="fas fa-users fa-2x mb-2"></i>
                            <h4>@(integrantesGrupo?.Count ?? 0)</h4>
                            <p>Integrantes</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-success text-white">
                        <div class="card-body text-center">
                            <i class="fas fa-check-circle fa-2x mb-2"></i>
                            <h4>@(tutor != null ? "Sí" : "No")</h4>
                            <p>Tutor Asignado</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-info text-white">
                        <div class="card-body text-center">
                            <i class="fas fa-crown fa-2x mb-2"></i>
                            <h4>@(lider != null ? "Sí" : "No")</h4>
                            <p>Líder Asignado</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .sidebar {
        min-height: 100vh;
        box-shadow: 2px 0 5px rgba(0,0,0,0.1);
    }

    .nav-link {
        color: #333;
        padding: 0.75rem 1rem;
        margin-bottom: 0.25rem;
        border-radius: 0.375rem;
        transition: all 0.3s ease;
    }

    .nav-link:hover {
        background-color: #f8f9fa;
        color: #007bff;
        transform: translateX(5px);
    }

    .nav-link.active {
        background-color: #007bff;
        color: white;
    }

    .card {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        border: 1px solid rgba(0, 0, 0, 0.125);
    }

    .main-content {
        background-color: #f8f9fa;
        min-height: 100vh;
    }

    .border-left-primary {
        border-left: 4px solid #007bff !important;
    }

    .badge {
        font-size: 0.75em;
    }
</style>
