@{
    ViewData["Title"] = "Dashboard - Estudiante";
    var estudiante = ViewBag.Estudiante as ServicioComunal.Models.Estudiante;
    var grupo = ViewBag.Grupo as ServicioComunal.Models.Grupo;
    var entregas = ViewBag.Entregas as List<ServicioComunal.Models.Entrega>;
    var companeros = ViewBag.Companeros as List<ServicioComunal.Models.Estudiante>;
    var tutor = ViewBag.Tutor as ServicioComunal.Models.Profesor;
}

<div class="container-fluid estudiante-theme">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-2 sidebar">
            <div class="text-center mb-4">
                <img src="~/images/logo-liceo.svg" alt="Logo" style="width: 60px; height: 60px;">
                <h5 class="mt-2">@estudiante?.Nombre @estudiante?.Apellidos</h5>
                <small class="text-muted">Estudiante - @estudiante?.Clase</small>
            </div>

            <nav class="nav flex-column">
                <a class="nav-link active" href="@Url.Action("Dashboard", "Estudiante")">
                    <i class="fas fa-tachometer-alt"></i> Dashboard
                </a>
                <a class="nav-link" href="@Url.Action("MiGrupo", "Estudiante")">
                    <i class="fas fa-users"></i> Mi Grupo
                </a>
                <a class="nav-link" href="@Url.Action("Entregas", "Estudiante")">
                    <i class="fas fa-file-upload"></i> Entregas
                </a>
                <a class="nav-link" href="@Url.Action("MisSolicitudes", "Estudiante")">
                    <i class="fas fa-bell"></i> Solicitudes
                </a>
                <a class="nav-link" href="@Url.Action("MiPerfil", "Estudiante")">
                    <i class="fas fa-user"></i> Mi Perfil
                </a>
                <hr>
                <a class="logout-btn" href="@Url.Action("Logout", "Auth")">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Cerrar Sesión</span>
                </a>
            </nav>
        </div>

        <!-- Contenido principal -->
        <div class="col-md-10 main-content">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Dashboard de Estudiante</h2>
                <div class="text-muted">
                    <i class="fas fa-calendar"></i> @DateTime.Now.ToString("dd/MM/yyyy")
                </div>
            </div>

            <!-- Información del grupo -->
            <div class="row mb-4">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-users"></i> Información del Grupo @grupo?.Numero
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <h6>Integrantes del Grupo:</h6>
                                    <ul class="list-unstyled">
                                        <li><i class="fas fa-user text-primary"></i> @estudiante?.Nombre @estudiante?.Apellidos (Yo)</li>
                                        @if (companeros != null)
                                        {
                                            foreach (var companero in companeros)
                                            {
                                                <li><i class="fas fa-user text-secondary"></i> @companero.Nombre @companero.Apellidos</li>
                                            }
                                        }
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <h6>Tutor Asignado:</h6>
                                    @if (tutor != null)
                                    {
                                        <p><i class="fas fa-chalkboard-teacher text-success"></i> @tutor.Nombre @tutor.Apellidos</p>
                                    }
                                    else
                                    {
                                        <p class="text-muted"><i class="fas fa-clock"></i> Sin tutor asignado aún</p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Entregas recientes -->
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-history"></i> Entregas Recientes
                            </h5>
                        </div>
                        <div class="card-body">
                            @if (entregas != null && entregas.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Nombre</th>
                                                <th>Descripción</th>
                                                <th>Fecha Límite</th>
                                                <th>Estado</th>
                                                <th>Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var entrega in entregas.Take(5))
                                            {
                                                <tr>
                                                    <td>@entrega.Nombre</td>
                                                    <td>@(entrega.Descripcion.Length > 50 ? entrega.Descripcion.Substring(0, 50) + "..." : entrega.Descripcion)</td>
                                                    <td>@entrega.FechaLimite.ToString("dd/MM/yyyy")</td>
                                                    <td>
                                                        @if (!string.IsNullOrEmpty(entrega.Retroalimentacion))
                                                        {
                                                            if (entrega.Retroalimentacion.StartsWith("CAMBIOS SOLICITADOS:"))
                                                            {
                                                                <span class="badge badge-danger">Requiere Cambios</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="badge badge-success">Revisada</span>
                                                            }
                                                        }
                                                        else if (!string.IsNullOrEmpty(entrega.ArchivoRuta))
                                                        {
                                                            <span class="badge badge-info">Enviada</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge badge-warning">Pendiente</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        <a href="@Url.Action("DetalleEntrega", "Estudiante", new { id = entrega.Identificacion })" class="btn btn-sm btn-outline-primary">Ver Detalles</a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <div class="text-center mt-3">
                                    <a href="@Url.Action("Entregas", "Estudiante")" class="btn btn-primary">Ver Todas las Entregas</a>
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-4">
                                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted">No hay entregas aún</h5>
                                    <p class="text-muted">Las entregas aparecerán aquí cuando tu tutor las asigne.</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Sidebar styling is now handled by main CSS */
    .sidebar {
        min-height: 100vh;
    }

    /* Navigation links are now handled by main CSS */
    .nav-link {
        color: #495057;
        padding: 0.75rem 1rem;
        margin-bottom: 0.25rem;
        border-radius: 0.375rem;
        transition: all 0.3s ease;
    }

    .nav-link:hover {
        background-color: #f5f1e8;
        color: #6c8d47;
        transform: translateX(5px);
    }

    .nav-link.active {
        background: linear-gradient(135deg, #6c8d47 0%, #5a7a3a 100%);
        color: white;
    }

    /* Card styling handled by main CSS with proper colors */
    .card {
        box-shadow: 0 0.125rem 0.25rem rgba(139, 119, 101, 0.075);
        border: 1px solid #e0d5c7;
    }

    /* Main content background handled by main CSS */
    .main-content {
        background: linear-gradient(135deg, #f5f1e8 0%, #ede4d3 100%);
        min-height: 100vh;
    }

    /* Badge styling handled by main CSS */
    .badge {
        font-size: 0.75em;
    }
</style>
