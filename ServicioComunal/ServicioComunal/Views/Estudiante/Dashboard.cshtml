@{
    ViewData["Title"] = "Dashboard - Estudiante";
    var estudiante = ViewBag.Estudiante as ServicioComunal.Models.Estudiante;
    var grupo = ViewBag.Grupo as ServicioComunal.Models.Grupo;
    var entregas = ViewBag.Entregas as List<ServicioComunal.Models.Entrega>;
    var companeros = ViewBag.Companeros as List<ServicioComunal.Models.Estudiante>;
    var tutor = ViewBag.Tutor as ServicioComunal.Models.Profesor;
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 sidebar bg-light p-3">
            <div class="text-center mb-4">
                <img src="~/images/logo-liceo.svg" alt="Logo" style="width: 60px; height: 60px;">
                <h5 class="mt-2">@estudiante?.Nombre @estudiante?.Apellidos</h5>
                <small class="text-muted">Estudiante - @estudiante?.Clase</small>
            </div>

            <nav class="nav flex-column">
                <a class="nav-link active" href="@Url.Action("Dashboard", "Estudiante")">
                    <i class="fas fa-tachometer-alt"></i> Dashboard
                </a>
                <a class="nav-link" href="@Url.Action("MiGrupo", "Estudiante")">
                    <i class="fas fa-users"></i> Mi Grupo
                </a>
                <a class="nav-link" href="@Url.Action("Entregas", "Estudiante")">
                    <i class="fas fa-file-upload"></i> Entregas
                </a>
                <a class="nav-link" href="@Url.Action("MisSolicitudes", "Estudiante")">
                    <i class="fas fa-bell"></i> Solicitudes
                </a>
                <a class="nav-link" href="@Url.Action("MiPerfil", "Estudiante")">
                    <i class="fas fa-user"></i> Mi Perfil
                </a>
                <hr>
                <a class="nav-link text-danger" href="@Url.Action("Logout", "Auth")">
                    <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
                </a>
            </nav>
        </div>

        <!-- Contenido principal -->
        <div class="col-md-9 main-content p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Dashboard de Estudiante</h2>
                <div class="text-muted">
                    <i class="fas fa-calendar"></i> @DateTime.Now.ToString("dd/MM/yyyy")
                </div>
            </div>

            <!-- Información del grupo -->
            <div class="row mb-4">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-users"></i> Información del Grupo @grupo?.Numero
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <h6>Integrantes del Grupo:</h6>
                                    <ul class="list-unstyled">
                                        <li><i class="fas fa-user text-primary"></i> @estudiante?.Nombre @estudiante?.Apellidos (Yo)</li>
                                        @if (companeros != null)
                                        {
                                            foreach (var companero in companeros)
                                            {
                                                <li><i class="fas fa-user text-secondary"></i> @companero.Nombre @companero.Apellidos</li>
                                            }
                                        }
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <h6>Tutor Asignado:</h6>
                                    @if (tutor != null)
                                    {
                                        <p><i class="fas fa-chalkboard-teacher text-success"></i> @tutor.Nombre @tutor.Apellidos</p>
                                    }
                                    else
                                    {
                                        <p class="text-muted"><i class="fas fa-clock"></i> Sin tutor asignado aún</p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Estadísticas rápidas -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card bg-info text-white">
                        <div class="card-body text-center">
                            <i class="fas fa-file-upload fa-2x mb-2"></i>
                            <h4>@(entregas?.Count ?? 0)</h4>
                            <p>Entregas Realizadas</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-success text-white">
                        <div class="card-body text-center">
                            <i class="fas fa-check-circle fa-2x mb-2"></i>
                            <h4>@(entregas?.Count(e => !string.IsNullOrEmpty(e.Retroalimentacion)) ?? 0)</h4>
                            <p>Entregas Revisadas</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-warning text-white">
                        <div class="card-body text-center">
                            <i class="fas fa-clock fa-2x mb-2"></i>
                            <h4>@(entregas?.Count(e => string.IsNullOrEmpty(e.Retroalimentacion)) ?? 0)</h4>
                            <p>Pendientes de Revisión</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-primary text-white">
                        <div class="card-body text-center">
                            <i class="fas fa-users fa-2x mb-2"></i>
                            <h4>@((companeros?.Count ?? 0) + 1)</h4>
                            <p>Miembros del Grupo</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Entregas recientes -->
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-history"></i> Entregas Recientes
                            </h5>
                        </div>
                        <div class="card-body">
                            @if (entregas != null && entregas.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Nombre</th>
                                                <th>Descripción</th>
                                                <th>Fecha Límite</th>
                                                <th>Estado</th>
                                                <th>Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var entrega in entregas.Take(5))
                                            {
                                                <tr>
                                                    <td>@entrega.Nombre</td>
                                                    <td>@(entrega.Descripcion.Length > 50 ? entrega.Descripcion.Substring(0, 50) + "..." : entrega.Descripcion)</td>
                                                    <td>@entrega.FechaLimite.ToString("dd/MM/yyyy")</td>
                                                    <td>
                                                        @if (!string.IsNullOrEmpty(entrega.Retroalimentacion))
                                                        {
                                                            <span class="badge badge-success">Revisada</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge badge-warning">Pendiente</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        <a href="#" class="btn btn-sm btn-outline-primary">Ver Detalles</a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <div class="text-center mt-3">
                                    <a href="@Url.Action("Entregas", "Estudiante")" class="btn btn-primary">Ver Todas las Entregas</a>
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-4">
                                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted">No hay entregas aún</h5>
                                    <p class="text-muted">Las entregas aparecerán aquí cuando tu tutor las asigne.</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .sidebar {
        min-height: 100vh;
        box-shadow: 2px 0 5px rgba(0,0,0,0.1);
    }

    .nav-link {
        color: #333;
        padding: 0.75rem 1rem;
        margin-bottom: 0.25rem;
        border-radius: 0.375rem;
        transition: all 0.3s ease;
    }

    .nav-link:hover {
        background-color: #f8f9fa;
        color: #007bff;
        transform: translateX(5px);
    }

    .nav-link.active {
        background-color: #007bff;
        color: white;
    }

    .card {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        border: 1px solid rgba(0, 0, 0, 0.125);
    }

    .main-content {
        background-color: #f8f9fa;
        min-height: 100vh;
    }

    .badge {
        font-size: 0.75em;
    }
</style>
