@model List<ServicioComunal.Models.Entrega>

@{
    ViewData["Title"] = "Gestión de Entregas";
}

<div class="dashboard-header-content">
    <h1 class="dashboard-title">
        <i class="fas fa-tasks"></i>
        Gestión de Entregas
    </h1>
    <p class="dashboard-subtitle">Administra las entregas del sistema</p>
</div>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger" role="alert">
        <i class="fas fa-exclamation-triangle"></i>
        @ViewBag.Error
    </div>
}

<div class="content-section">
    <div class="section-header">
        <h2>Lista de Entregas</h2>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalEntrega">
            <i class="fas fa-plus"></i>
            Nueva Entrega
        </button>
    </div>

    <!-- Barra de búsqueda y filtros -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <label class="form-label">Buscar entregas:</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-search"></i>
                        </span>
                        <input type="text" class="form-control" id="buscarEntrega" 
                               placeholder="Buscar por nombre, descripción o grupo..." 
                               onkeyup="filtrarEntregas()">
                        <button class="btn btn-outline-secondary" type="button" onclick="limpiarBusqueda()">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Filtrar por estado:</label>
                    <select class="form-select" id="filtroEstado" onchange="filtrarEntregas()">
                        <option value="">Todos los estados</option>
                        <option value="pendiente">Pendientes</option>
                        <option value="entregada">Entregadas</option>
                        <option value="completada">Completadas</option>
                        <option value="vencida">Vencidas</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Filtrar por grupo:</label>
                    <select class="form-select" id="filtroGrupo" onchange="filtrarEntregas()">
                        <option value="">Todos los grupos</option>
                        @{
                            var gruposUnicos = Model.Select(e => e.GrupoNumero).Distinct().OrderBy(g => g);
                        }
                        @foreach (var grupo in gruposUnicos)
                        {
                            <option value="@grupo">Grupo @grupo</option>
                        }
                    </select>
                </div>
            </div>
        </div>
    </div>

    <div class="table-container">
        <table class="table table-striped" id="tablaEntregas">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Fecha Límite</th>
                    <th>Grupo</th>
                    <th>Recurso</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var entrega in Model)
                {
                    var fechaVencida = entrega.FechaLimite < DateTime.Now;
                    var tieneArchivo = !string.IsNullOrEmpty(entrega.ArchivoRuta);
                    var tieneRetroalimentacion = !string.IsNullOrEmpty(entrega.Retroalimentacion);
                    
                    var estadoEntrega = "";
                    if (tieneArchivo && tieneRetroalimentacion)
                        estadoEntrega = "completada";
                    else if (tieneArchivo)
                        estadoEntrega = "entregada";
                    else if (fechaVencida)
                        estadoEntrega = "vencida";
                    else
                        estadoEntrega = "pendiente";

                    <tr class="entrega-row @(fechaVencida ? "table-warning" : "")" 
                        data-id="@entrega.Identificacion"
                        data-nombre="@entrega.Nombre.ToLower()"
                        data-descripcion="@entrega.Descripcion.ToLower()"
                        data-grupo="@entrega.GrupoNumero"
                        data-estado="@estadoEntrega">
                        <td>@entrega.Identificacion</td>
                        <td>@entrega.Nombre</td>
                        <td>@entrega.Descripcion</td>
                        <td>
                            @entrega.FechaLimite.ToString("dd/MM/yyyy HH:mm")
                            @if (fechaVencida)
                            {
                                <br><small class="text-danger"><i class="fas fa-exclamation-triangle"></i> Vencida</small>
                            }
                        </td>
                        <td>
                            <span class="badge badge-info">Grupo @entrega.GrupoNumero</span>
                        </td>
                        <td>
                            @if (entrega.Formulario != null)
                            {
                                <a href="@Url.Action("DescargarFormulario", "Home", new { id = entrega.Formulario.Identificacion })" 
                                   class="btn btn-sm btn-outline-primary" title="Descargar formulario asociado">
                                    <i class="fas fa-file-download"></i> @entrega.Formulario.Nombre
                                </a>
                            }
                            else if (entrega.TipoAnexo > 0)
                            {
                                var nombreAnexo = entrega.TipoAnexo switch
                                {
                                    1 => "Anexo #1 - Información Básica",
                                    2 => "Anexo #2 - Propuesta de Proyecto",
                                    3 => "Anexo #3 - Plan de Trabajo",
                                    5 => "Anexo #5 - Evaluación Final",
                                    6 => "Informe Final Tutor",
                                    7 => "Carta para Ingresar a la Institución",
                                    8 => "Carta de Consentimiento Encargado Legal",
                                    _ => $"Anexo #{entrega.TipoAnexo}"
                                };
                                var archivoAnexo = entrega.TipoAnexo switch
                                {
                                    1 => "Anexo #1 Interactivo.pdf",
                                    2 => "Anexo #2 Interactivo.pdf",
                                    3 => "Anexo #3 Interactivo.pdf",
                                    5 => "Anexo #5 Interactivo.pdf",
                                    6 => "Informe final tutor Interactiva.pdf",
                                    7 => "Carta para ingresar a la institucion interactiva.pdf",
                                    8 => "Carta de consentimiento encargado legal Interactiva.pdf",
                                    _ => ""
                                };
                                <a href="/uploads/formularios/@Uri.EscapeDataString(archivoAnexo)" 
                                   class="btn btn-sm btn-outline-success" title="Descargar formulario" target="_blank">
                                    <i class="fas fa-file-pdf"></i> @nombreAnexo
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">
                                    <i class="fas fa-minus"></i> Sin recurso
                                </span>
                            }
                        </td>
                        <td>
                            @if (tieneArchivo && tieneRetroalimentacion)
                            {
                                <span class="badge badge-success"><i class="fas fa-check"></i> Completada</span>
                            }
                            else if (tieneArchivo)
                            {
                                <span class="badge badge-info"><i class="fas fa-upload"></i> Entregada</span>
                            }
                            else if (fechaVencida)
                            {
                                <span class="badge badge-danger"><i class="fas fa-times"></i> Vencida</span>
                            }
                            else
                            {
                                <span class="badge badge-secondary"><i class="fas fa-clock"></i> Pendiente</span>
                            }
                        </td>
                        <td>
                            <button type="button" class="btn btn-sm btn-info" onclick="verEntrega(@entrega.Identificacion)">
                                <i class="fas fa-eye"></i>
                            </button>
                            <button type="button" class="btn btn-sm btn-warning" onclick="editarEntrega(@entrega.Identificacion)">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button type="button" class="btn btn-sm btn-danger" onclick="eliminarEntrega(@entrega.Identificacion)">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal para crear/editar entrega -->
<div class="modal fade" id="modalEntrega" tabindex="-1" aria-labelledby="modalEntregaLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalEntregaLabel">Nueva Entrega</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formEntrega">
                    <input type="hidden" id="entregaId" name="identificacion">
                    
                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <label for="entregaNombre" class="form-label">Nombre de la Entrega *</label>
                            <input type="text" class="form-control" id="entregaNombre" name="nombre" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="entregaFechaLimite" class="form-label">Fecha Límite *</label>
                            <input type="datetime-local" class="form-control" id="entregaFechaLimite" name="fechaLimite" required>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <label for="entregaDescripcion" class="form-label">Descripción *</label>
                            <textarea class="form-control" id="entregaDescripcion" name="descripcion" rows="3" required></textarea>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Tipo de Recurso</label>
                            <div class="form-check">
                                <input type="radio" class="form-check-input" id="tipoAnexo" name="tipoRecurso" value="anexo" checked>
                                <label class="form-check-label" for="tipoAnexo">
                                    Formulario
                                </label>
                            </div>
                            <div class="form-check">
                                <input type="radio" class="form-check-input" id="tipoNinguno" name="tipoRecurso" value="ninguno">
                                <label class="form-check-label" for="tipoNinguno">
                                    Sin recurso
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3" id="seccionAnexo">
                            <label for="entregaAnexo" class="form-label">Formulario</label>
                            <select class="form-select" id="entregaAnexo" name="tipoAnexo">
                                <option value="">-- Seleccionar Formulario --</option>
                                <option value="1">Anexo #1 - Información Básica</option>
                                <option value="2">Anexo #2 - Propuesta de Proyecto</option>
                                <option value="3">Anexo #3 - Plan de Trabajo</option>
                                <option value="5">Anexo #5 - Evaluación Final</option>
                                <option value="6">Informe Final Tutor</option>
                                <option value="7">Carta para Ingresar a la Institución</option>
                                <option value="8">Carta de Consentimiento Encargado Legal</option>
                            </select>
                            <div class="form-text">Formulario que los estudiantes deberán completar</div>
                        </div>
                    </div>

                    <!-- Solo mostrar selección de grupo en modo edición -->
                    <div class="row" id="modoEdicion" style="display: none;">
                        <div class="col-md-12 mb-3">
                            <label for="entregaGrupo" class="form-label">Grupo</label>
                            <select class="form-select" id="entregaGrupo" name="grupoNumero">
                                <option value="">-- Seleccionar Grupo --</option>
                                @{
                                    var grupos = ViewBag.Grupos as List<ServicioComunal.Models.Grupo> ?? new List<ServicioComunal.Models.Grupo>();
                                }
                                @foreach (var grupo in grupos)
                                {
                                    <option value="@grupo.Numero">Grupo @grupo.Numero (@grupo.GruposEstudiantes.Count estudiantes)</option>
                                }
                            </select>
                            <div class="form-text">En modo edición solo se puede modificar una entrega específica de un grupo</div>
                        </div>
                    </div>

                    <!-- Sección para seleccionar destinatarios de la entrega (solo en modo creación) -->
                    <div class="row" id="seccionDestinatarios">
                        <div class="col-md-12 mb-3">
                            <label class="form-label">Destinatarios de la Entrega</label>
                            <div class="form-check">
                                <input type="radio" class="form-check-input" id="todosLosGrupos" name="destinatarios" value="todos" checked>
                                <label class="form-check-label" for="todosLosGrupos">
                                    <i class="fas fa-users"></i> Enviar a todos los grupos
                                </label>
                            </div>
                            <div class="form-check">
                                <input type="radio" class="form-check-input" id="grupoEspecifico" name="destinatarios" value="especifico">
                                <label class="form-check-label" for="grupoEspecifico">
                                    <i class="fas fa-user-friends"></i> Enviar a un grupo específico
                                </label>
                            </div>
                        </div>
                        
                        <!-- Dropdown para seleccionar grupo específico -->
                        <div class="col-md-12 mb-3" id="seccionGrupoEspecifico" style="display: none;">
                            <label for="entregaGrupoEspecifico" class="form-label">Seleccionar Grupo</label>
                            <select class="form-select" id="entregaGrupoEspecifico" name="grupoEspecifico">
                                <option value="">-- Seleccionar Grupo --</option>
                                @foreach (var grupo in grupos)
                                {
                                    <option value="@grupo.Numero">Grupo @grupo.Numero (@grupo.GruposEstudiantes.Count estudiantes)</option>
                                }
                            </select>
                            <div class="form-text">La entrega se creará únicamente para el grupo seleccionado</div>
                        </div>
                    </div>

                    <div class="alert alert-info" id="infoNuevaEntrega">
                        <i class="fas fa-info-circle"></i>
                        <strong>Nota:</strong> <span id="textoInfoEntrega">Al crear una nueva entrega, se generará automáticamente una tarea para cada grupo existente.</span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="guardarEntrega()">Guardar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal para ver detalles de entrega -->
<div class="modal fade" id="modalVerEntrega" tabindex="-1" aria-labelledby="modalVerEntregaLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalVerEntregaLabel">Detalles de la Entrega</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="detallesEntrega">
                <!-- Contenido se llenará dinámicamente -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/entregas.js"></script>
    <style>
        .form-check {
            margin-bottom: 0.5rem;
        }
        
        .form-check-label {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .form-check-label i {
            color: #6c757d;
        }
        
        #seccionGrupoEspecifico {
            background-color: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 0.375rem;
            padding: 1rem;
            margin-top: 0.5rem;
        }
        
        .alert-info {
            font-size: 0.9rem;
        }
        
        .badge {
            font-size: 0.75em;
        }
        
        /* Estilos para la barra de búsqueda */
        .card {
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }
        
        .input-group .form-control:focus {
            border-color: #86b7fe;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }
        
        .btn-outline-secondary:hover {
            color: #fff;
            background-color: #6c757d;
            border-color: #6c757d;
        }
        
        /* Mejorar visibilidad de filas filtradas */
        .entrega-row {
            transition: opacity 0.3s ease;
        }
        
        .entrega-row:hover {
            background-color: rgba(0, 123, 255, 0.05);
        }
    </style>
}
