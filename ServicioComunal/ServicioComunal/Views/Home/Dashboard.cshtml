@{
    ViewData["Title"] = "Dashboard";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Dashboard - Servicio Comunal</h4>
                </div>
                <div class="card-body text-center">
                    @if (ViewBag.Success == true)
                    {
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle"></i> 
                            <pre style="white-space: pre-wrap; text-align: left; margin-top: 10px;">@ViewBag.Message</pre>
                        </div>
                    }
                    else if (ViewBag.Success == false)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle"></i> 
                            <pre style="white-space: pre-wrap; text-align: left; margin-top: 10px;">@ViewBag.Message</pre>
                        </div>
                    }
                    else
                    {
                        <h5>@ViewBag.Message</h5>
                        <p class="text-muted">Esta será la página principal después del login exitoso.</p>
                    }
                    
                    <div class="mt-4">
                        <a href="@Url.Action("SeedData", "Home")" class="btn btn-primary me-2">
                            <i class="fas fa-database"></i> Poblar BD Completa
                        </a>
                        <a href="@Url.Action("SeedUsuariosSafe", "Home")" class="btn btn-success me-2">
                            <i class="fas fa-shield-alt"></i> Crear Usuarios (Seguro)
                        </a>
                        <a href="@Url.Action("ReseedUsuarios", "Home")" class="btn btn-warning me-2">
                            <i class="fas fa-redo"></i> Recrear Usuarios
                        </a>
                        <a href="@Url.Action("VerificarUsuarios", "Home")" class="btn btn-info me-2">
                            <i class="fas fa-users"></i> Verificar Usuarios
                        </a>
                        <a href="@Url.Action("Login", "Auth")" class="btn btn-outline-secondary">
                            <i class="fas fa-sign-out-alt"></i> Ir al Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
