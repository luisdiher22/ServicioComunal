@{
    ViewData["Title"] = "Dashboard";
    Layout = "_Layout";
}

<div class="dashboard-content">
    <div class="content-header">
        <h1>Dashboard de Administrador</h1>
        <p>Control total del sistema</p>
    </div>

    <div class="dashboard-cards">
        <!-- Card: Estudiantes -->
        <a href="@Url.Action("Estudiantes", "Home")" class="dashboard-card-link">
            <div class="dashboard-card">
                <div class="card-icon students">
                    <i class="fas fa-graduation-cap"></i>
                </div>
                <div class="card-content">
                    <h3>Estudiantes</h3>
                    <p>Gestionar lista de estudiantes</p>
                </div>
                <div class="card-stats">
                    <div class="stat-number">6</div>
                    <div class="stat-label">2 sin grupo</div>
                </div>
            </div>
        </a>

        <!-- Card: Grupos -->
        <a href="@Url.Action("GestionGrupos", "Home")" class="dashboard-card-link">
            <div class="dashboard-card">
                <div class="card-icon groups">
                    <i class="fas fa-users"></i>
                </div>
                <div class="card-content">
                    <h3>Grupos</h3>
                    <p>Administrar formación de grupos</p>
                </div>
                <div class="card-stats">
                    <div class="stat-number">2</div>
                    <div class="stat-label">1 con tutor asignado</div>
                </div>
            </div>
        </a>

        <!-- Card: Tutores -->
        <a href="@Url.Action("AsignarTutores", "Home")" class="dashboard-card-link">
            <div class="dashboard-card">
                <div class="card-icon tutors">
                    <i class="fas fa-chalkboard-teacher"></i>
                </div>
                <div class="card-content">
                    <h3>Tutores</h3>
                    <p>Asignar tutores a grupos</p>
                </div>
                <div class="card-stats">
                    <div class="stat-number">3</div>
                    <div class="stat-label">1 disponible</div>
                </div>
            </div>
        </a>

        <!-- Card: Progreso -->
        <div class="dashboard-card">
            <div class="card-icon progress">
                <i class="fas fa-chart-line"></i>
            </div>
            <div class="card-content">
                <h3>Progreso Promedio</h3>
                <p>Seguimiento del avance general</p>
            </div>
            <div class="card-stats">
                <div class="stat-number">38%</div>
                <div class="progress-bar">
                    <div class="progress-fill" style="width: 38%"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Actions Section -->
    <div class="dashboard-actions">
        <a href="@Url.Action("Configuracion", "Home")" class="actions-card-link">
            <div class="actions-card">
                <div class="actions-icon">
                    <i class="fas fa-cogs"></i>
                </div>
                <div class="actions-content">
                    <h4>Configuración</h4>
                    <p>Gestionar configuración del sistema, formularios y entregas</p>
                    <button class="btn btn-action">
                        <i class="fas fa-cog"></i>
                        Configurar
                    </button>
                </div>
            </div>
        </a>
    </div>

    <!-- Alerts Section -->
    <div class="dashboard-alerts">
        <div class="alert-item warning">
            <div class="alert-icon">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <div class="alert-content">
                <strong>3 estudiantes</strong>
                <p>No tienen grupo asignado</p>
                <a href="@Url.Action("Estudiantes", "Home")" class="alert-link">Gestionar grupos</a>
            </div>
        </div>
    </div>
</div>
