@model List<ServicioComunal.Models.GrupoProfesor>
@{
    ViewData["Title"] = "Mis Grupos";
    ViewData["UserRole"] = "Tutor";
    ViewData["UserCedula"] = "2-3456-7890";
    ViewData["NotificationCount"] = "1";
    Layout = "_Layout";
}

<div class="dashboard-content tutor-theme">
    <div class="content-header">
        <h1>Mis Grupos</h1>
        <p>Estado detallado de todos tus grupos asignados</p>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="grupos-grid">
            @foreach (var grupoProfesor in Model)
            {
                var grupo = grupoProfesor.Grupo;
                var totalEstudiantes = grupo.GruposEstudiantes.Count;
                var entregasConFecha = grupo.Entregas.Where(e => e.FechaRetroalimentacion.HasValue).ToList();
                var ultimaActividad = entregasConFecha.Any() ? 
                    entregasConFecha.Max(e => e.FechaRetroalimentacion!.Value).ToString("dd/MM/yyyy") : 
                    "Sin actividad";
                var entregasPendientes = grupo.Entregas.Count(e => string.IsNullOrEmpty(e.Retroalimentacion));
                var progreso = grupo.Entregas.Any() ? (grupo.Entregas.Count(e => !string.IsNullOrEmpty(e.Retroalimentacion)) * 100 / grupo.Entregas.Count) : 0;
                
                <div class="grupo-detalle-card" id="grupo-@grupo.Numero">
                    <div class="card-header">
                        <div class="grupo-title">
                            <h3>Grupo @grupo.Numero</h3>
                            <div class="status-badges">
                                @if (entregasPendientes > 0)
                                {
                                    <span class="badge badge-pending">@entregasPendientes pendiente@(entregasPendientes > 1 ? "s" : "")</span>
                                }
                                else if (progreso >= 75)
                                {
                                    <span class="badge badge-approved">Al día</span>
                                }
                                else
                                {
                                    <span class="badge badge-changes">En progreso</span>
                                }
                            </div>
                        </div>
                        <div class="ultima-actividad">
                            <i class="fas fa-clock"></i>
                            <span>Última actividad: @ultimaActividad</span>
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="grupo-info-section">
                            <div class="integrantes-section">
                                <h4><i class="fas fa-users"></i> Integrantes</h4>
                                <div class="integrantes-list">
                                    @foreach (var grupoEstudiante in grupo.GruposEstudiantes)
                                    {
                                        <div class="integrante-item">
                                            <div class="avatar-large">
                                                @grupoEstudiante.Estudiante.Nombre.Substring(0, 1)@grupoEstudiante.Estudiante.Apellidos.Substring(0, 1)
                                            </div>
                                            <div class="integrante-info">
                                                <span class="nombre">@grupoEstudiante.Estudiante.Nombre @grupoEstudiante.Estudiante.Apellidos</span>
                                                <small class="cedula">@grupoEstudiante.Estudiante.Identificacion</small>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>

                            <div class="progreso-section">
                                <h4><i class="fas fa-chart-line"></i> Progreso</h4>
                                <div class="progreso-detalle">
                                    <div class="progreso-numero">@progreso%</div>
                                    <div class="progreso-barra">
                                        <div class="progress-bar">
                                            <div class="progress-fill" style="width: @progreso%"></div>
                                        </div>
                                        <div class="progreso-text">
                                            @grupo.Entregas.Count(e => !string.IsNullOrEmpty(e.Retroalimentacion)) de @grupo.Entregas.Count entregables completados
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="grupo-actions-section">
                            <button class="btn btn-primary" onclick="verDetalles(@grupo.Numero)">
                                <i class="fas fa-eye"></i> Ver Detalles
                            </button>
                            <a href="@Url.Action("Revisiones", "Tutor", new { grupo = grupo.Numero })" class="btn btn-outline-primary">
                                <i class="fas fa-clipboard-check"></i> Ver Entregas
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state-large">
            <div class="empty-icon">
                <i class="fas fa-users-slash"></i>
            </div>
            <h2>No tienes grupos asignados</h2>
            <p>Parece que aún no tienes ningún grupo asignado como tutor.</p>
            <p>Contacta al administrador para que te asigne grupos de estudiantes.</p>
            <div class="empty-actions">
                <a href="@Url.Action("Dashboard", "Tutor")" class="btn btn-primary">
                    <i class="fas fa-home"></i> Volver al Dashboard
                </a>
            </div>
        </div>
    }
</div>

<style>
/* Estilos específicos para Mis Grupos */
.grupos-grid {
    display: grid;
    gap: 24px;
}

.grupo-detalle-card {
    background: white;
    border-radius: 12px;
    box-shadow: 0 2px 10px rgba(139, 119, 101, 0.08);
    border: 1px solid #e0d5c7;
    overflow: hidden;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.grupo-detalle-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 20px rgba(139, 119, 101, 0.12);
}

.card-header {
    background: linear-gradient(135deg, #f5f1e8 0%, #ede4d3 100%);
    padding: 20px 24px;
    border-bottom: 1px solid #e0d5c7;
}

.grupo-title {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 8px;
}

.grupo-title h3 {
    font-size: 20px;
    font-weight: 600;
    color: #2c3e50;
    margin: 0;
}

.status-badges {
    display: flex;
    gap: 8px;
}

.ultima-actividad {
    display: flex;
    align-items: center;
    gap: 8px;
    color: #6c757d;
    font-size: 14px;
}

.ultima-actividad i {
    color: #8b7765;
}

.card-body {
    padding: 24px;
}

.grupo-info-section {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 32px;
    margin-bottom: 24px;
}

.integrantes-section h4,
.progreso-section h4 {
    font-size: 16px;
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 16px;
    display: flex;
    align-items: center;
    gap: 8px;
}

.integrantes-section h4 i,
.progreso-section h4 i {
    color: #8b7765;
}

.integrantes-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.integrante-item {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px;
    background: #f8f9fa;
    border-radius: 8px;
    border: 1px solid #e9ecef;
}

.avatar-large {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: linear-gradient(135deg, #8b7765 0%, #6f5d4f 100%);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;
    font-weight: 600;
    flex-shrink: 0;
}

.integrante-info {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.integrante-info .nombre {
    font-weight: 500;
    color: #2c3e50;
    font-size: 14px;
}

.integrante-info .cedula {
    color: #6c757d;
    font-size: 12px;
}

.integrante-contact {
    flex-shrink: 0;
}

.progreso-detalle {
    display: flex;
    flex-direction: column;
    gap: 16px;
}

.progreso-numero {
    font-size: 32px;
    font-weight: 700;
    color: #8b7765;
    text-align: center;
}

.progreso-barra {
    display: flex;
    flex-direction: column;
    gap: 8px;
}

.progreso-text {
    font-size: 12px;
    color: #6c757d;
    text-align: center;
}

.grupo-actions-section {
    display: flex;
    gap: 12px;
    padding-top: 20px;
    border-top: 1px solid #e9ecef;
}

.grupo-actions-section .btn {
    flex: 1;
}

.empty-state-large {
    text-align: center;
    padding: 60px 20px;
    background: white;
    border-radius: 12px;
    box-shadow: 0 2px 10px rgba(139, 119, 101, 0.08);
}

.empty-icon {
    margin-bottom: 24px;
}

.empty-icon i {
    font-size: 64px;
    color: #c4a484;
    opacity: 0.6;
}

.empty-state-large h2 {
    font-size: 24px;
    color: #2c3e50;
    margin-bottom: 12px;
}

.empty-state-large p {
    color: #6c757d;
    font-size: 16px;
    margin-bottom: 8px;
    max-width: 400px;
    margin-left: auto;
    margin-right: auto;
}

.empty-actions {
    margin-top: 24px;
}

/* Responsive */
@@media (max-width: 768px) {
    .grupo-info-section {
        grid-template-columns: 1fr;
        gap: 24px;
    }
    
    .grupo-actions-section {
        flex-direction: column;
    }
    
    .grupo-actions-section .btn {
        flex: none;
    }
}
</style>

