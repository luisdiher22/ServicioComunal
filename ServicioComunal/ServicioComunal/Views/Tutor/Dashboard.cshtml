@{
    ViewData["Title"] = "Dashboard de Tutor";
    ViewData["UserRole"] = "Tutor";
    ViewData["UserCedula"] = "2-3456-7890";
    ViewData["NotificationCount"] = "1";
    Layout = "_Layout";
}

<div class="dashboard-content tutor-theme">
    <div class="content-header">
        <h1>Dashboard de Tutor</h1>
        <p>Herramientas para profesores tutores</p>
    </div>

    <div class="dashboard-cards">
        <!-- Card: Mis Grupos -->
        <a href="@Url.Action("MisGrupos", "Tutor")" class="dashboard-card-link">
            <div class="dashboard-card">
                <div class="card-icon groups">
                    <i class="fas fa-users"></i>
                </div>
                <div class="card-content">
                    <h3>Mis Grupos</h3>
                    <p>Gestionar grupos asignados</p>
                </div>
                <div class="card-stats">
                    <div class="stat-number">@ViewBag.TotalGrupos</div>
                    <div class="stat-label">@(ViewBag.TotalGrupos == 1 ? "grupo asignado" : "grupos asignados")</div>
                </div>
            </div>
        </a>

        <!-- Card: Revisiones -->
        <a href="@Url.Action("Revisiones", "Tutor")" class="dashboard-card-link">
            <div class="dashboard-card">
                <div class="card-icon reviews">
                    <i class="fas fa-clipboard-check"></i>
                </div>
                <div class="card-content">
                    <h3>Revisiones</h3>
                    <p>Revisar y comentar entregables</p>
                </div>
                <div class="card-stats">
                    <div class="stat-number">@ViewBag.RevisionesPendientes</div>
                    <div class="stat-label">entregables por revisar</div>
                </div>
            </div>
        </a>

        <!-- Card: Esta Semana -->
        <div class="dashboard-card">
            <div class="card-icon deliveries">
                <i class="fas fa-calendar-week"></i>
            </div>
            <div class="card-content">
                <h3>Esta Semana</h3>
                <p>Entregas programadas</p>
            </div>
            <div class="card-stats">
                <div class="stat-number">@ViewBag.EntregasSemana</div>
                <div class="stat-label">entregas programadas</div>
            </div>
        </div>
    </div>

    <!-- Resumen de Grupos -->
    <div class="dashboard-section">
        <h2>Resumen de Grupos</h2>
        
        @if (ViewBag.GruposAsignados != null && ((List<ServicioComunal.Models.GrupoProfesor>)ViewBag.GruposAsignados).Any())
        {
            <div class="grupos-resumen">
                @foreach (var grupoProfesor in (List<ServicioComunal.Models.GrupoProfesor>)ViewBag.GruposAsignados)
                {
                    var grupo = grupoProfesor.Grupo;
                    var totalEstudiantes = grupo.GruposEstudiantes.Count;
                    var entregasConFecha = grupo.Entregas.Where(e => e.FechaRetroalimentacion.HasValue).ToList();
                    var ultimaActividad = entregasConFecha.Any() ? 
                        entregasConFecha.Max(e => e.FechaRetroalimentacion!.Value).ToString("dd/MM/yyyy") : 
                        "Sin actividad";
                    var entregasPendientes = grupo.Entregas.Count(e => string.IsNullOrEmpty(e.Retroalimentacion));
                    // Cálculo simple de progreso
                    var progreso = grupo.Entregas.Any() ? (grupo.Entregas.Count(e => !string.IsNullOrEmpty(e.Retroalimentacion)) * 100 / grupo.Entregas.Count) : 0;
                    
                    <div class="grupo-card">
                        <div class="grupo-header">
                            <div class="grupo-info">
                                <div class="grupo-avatar">
                                    @foreach (var estudiante in grupo.GruposEstudiantes.Take(3))
                                    {
                                        <div class="avatar" title="@estudiante.Estudiante.Nombre @estudiante.Estudiante.Apellidos">
                                            @estudiante.Estudiante.Nombre.Substring(0, 1)@estudiante.Estudiante.Apellidos.Substring(0, 1)
                                        </div>
                                    }
                                </div>
                                <div class="grupo-details">
                                    <h4>Grupo @grupo.Numero</h4>
                                    <p>@totalEstudiantes integrantes</p>
                                    <small>Última actividad: @ultimaActividad</small>
                                </div>
                            </div>
                            <div class="grupo-badges">
                                @if (entregasPendientes > 0)
                                {
                                    <span class="badge badge-pending">@entregasPendientes pendiente@(entregasPendientes > 1 ? "s" : "")</span>
                                }
                                else
                                {
                                    <span class="badge badge-approved">Al día</span>
                                }
                            </div>
                        </div>
                        <div class="grupo-progress">
                            <div class="progress-info">
                                <span>Progreso: @progreso%</span>
                            </div>
                            <div class="progress-bar">
                                <div class="progress-fill" style="width: @progreso%"></div>
                            </div>
                        </div>
                        <div class="grupo-actions">
                            <a href="@Url.Action("MisGrupos", "Tutor")#grupo-@grupo.Numero" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-eye"></i> Ver Detalles
                            </a>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-users-slash"></i>
                <h3>No tienes grupos asignados</h3>
                <p>Espera a que el administrador te asigne grupos de estudiantes.</p>
            </div>
        }
    </div>
</div>

<style>
/* Estilos específicos para el dashboard de tutor */
.dashboard-section {
    background: white;
    border-radius: 12px;
    padding: 24px;
    margin-bottom: 20px;
    box-shadow: 0 2px 10px rgba(139, 119, 101, 0.08);
    border: 1px solid #e0d5c7;
}

.dashboard-section h2 {
    font-size: 20px;
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 20px;
    border-bottom: 2px solid #8b7765;
    padding-bottom: 8px;
}

.grupos-resumen {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 20px;
}

.grupo-card {
    background: #f8f9fa;
    border-radius: 8px;
    padding: 16px;
    border: 1px solid #e0d5c7;
    transition: transform 0.2s ease;
}

.grupo-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(139, 119, 101, 0.1);
}

.grupo-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 12px;
}

.grupo-info {
    display: flex;
    gap: 12px;
    align-items: center;
}

.grupo-avatar {
    display: flex;
    gap: -8px;
}

.avatar {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: linear-gradient(135deg, #8b7765 0%, #6f5d4f 100%);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 12px;
    font-weight: 600;
    margin-left: -8px;
    border: 2px solid white;
}

.avatar:first-child {
    margin-left: 0;
}

.grupo-details h4 {
    font-size: 16px;
    font-weight: 600;
    color: #2c3e50;
    margin: 0 0 4px 0;
}

.grupo-details p {
    font-size: 14px;
    color: #6c757d;
    margin: 0 0 2px 0;
}

.grupo-details small {
    font-size: 12px;
    color: #8b7765;
}

.grupo-badges {
    display: flex;
    flex-direction: column;
    gap: 4px;
}

.badge {
    padding: 4px 8px;
    border-radius: 12px;
    font-size: 11px;
    font-weight: 600;
    text-align: center;
}

.grupo-progress {
    margin-bottom: 12px;
}

.progress-info {
    display: flex;
    justify-content: space-between;
    margin-bottom: 4px;
    font-size: 12px;
    color: #6c757d;
}

.grupo-actions {
    display: flex;
    gap: 8px;
}

.grupo-actions .btn {
    flex: 1;
    font-size: 12px;
    padding: 6px 12px;
}

.empty-state {
    text-align: center;
    padding: 40px 20px;
    color: #6c757d;
}

.empty-state i {
    font-size: 48px;
    margin-bottom: 16px;
    opacity: 0.5;
}

.empty-state h3 {
    font-size: 18px;
    margin-bottom: 8px;
}

.empty-state p {
    font-size: 14px;
}
</style>

